{
  TemplateRepresentation representation=null;
  try {
    Map<String,Object> map=new TreeMap<String,Object>();
    map.put("items",items);
    representation=new TemplateRepresentation("items.vtl",map,MediaType.TEXT_PLAIN);
    representation.getEngine().addProperty("file.resource.loader.path","D:\\alaska\\forge\\build\\swc\\nre\\trunk\\books\\apress\\manuscript\\sample\\");
  }
 catch (  Exception e) {
