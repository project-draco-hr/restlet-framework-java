{
  if (this.requestEntityStream == null) {
    try {
      if (isRequestChunked()) {
        this.requestEntityStream=new ChunkedInputStream(getRequest().getInputStream());
      }
 else {
        this.requestEntityStream=new InputEntityStream(getRequest().getInputStream(),size);
      }
    }
 catch (    final IOException e) {
      e.printStackTrace();
    }
  }
  return this.requestEntityStream;
}
