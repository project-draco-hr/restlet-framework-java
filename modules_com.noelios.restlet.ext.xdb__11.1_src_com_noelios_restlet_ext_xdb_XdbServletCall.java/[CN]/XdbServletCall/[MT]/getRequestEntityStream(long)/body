{
  if (requestEntityStream == null) {
    try {
      if (isRequestChunked()) {
        requestEntityStream=new ChunkedInputStream(getRequest().getInputStream());
      }
 else {
        requestEntityStream=new InputEntityStream(getRequest().getInputStream(),size);
      }
    }
 catch (    IOException e) {
      e.printStackTrace();
    }
  }
  return requestEntityStream;
}
