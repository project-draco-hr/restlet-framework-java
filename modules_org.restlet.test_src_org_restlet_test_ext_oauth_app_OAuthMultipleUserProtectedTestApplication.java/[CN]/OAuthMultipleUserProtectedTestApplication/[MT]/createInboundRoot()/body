{
  Context ctx=getContext();
  Router router=new Router(ctx);
  OAuthAuthorizer auth2=new OAuthAuthorizer(protocol + "://localhost:" + oauthServerPort+ "/oauth/validate",protocol + "://localhost:" + oauthServerPort+ "/oauth/authorize");
  System.out.println("attaching resource");
  auth2.setNext(ScopedDummyResource.class);
  router.attach("/scoped/{oauth-user}",auth2);
  return router;
}
