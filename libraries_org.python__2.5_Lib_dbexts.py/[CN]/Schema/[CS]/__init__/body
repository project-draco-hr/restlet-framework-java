def __init__(self, db, table, owner=None, full=0, sort=1):
    self.db = db
    self.table = table
    self.owner = owner
    self.full = full
    self.sort = sort
    _verbose = self.db.verbose
    self.db.verbose = 0
    try:
        if table:
            self.computeschema()
    finally:
        self.db.verbose = _verbose
