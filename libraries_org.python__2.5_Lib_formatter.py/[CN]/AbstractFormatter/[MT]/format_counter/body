def format_counter(self, format, counter):
    label = ''
    for c in format:
        if (c == '1'):
            label = (label + ('%d' % counter))
        elif (c in 'aA'):
            if (counter > 0):
                label = (label + self.format_letter(c, counter))
        elif (c in 'iI'):
            if (counter > 0):
                label = (label + self.format_roman(c, counter))
        else:
            label = (label + c)
    return label
