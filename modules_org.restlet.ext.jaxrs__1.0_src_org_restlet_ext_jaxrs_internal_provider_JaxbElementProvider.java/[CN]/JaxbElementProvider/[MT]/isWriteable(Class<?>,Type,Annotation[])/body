{
  if (!type.isAssignableFrom(JAXBElement.class))   return false;
  if (!(genericType instanceof ParameterizedType))   return false;
  ParameterizedType pt=(ParameterizedType)genericType;
  Type atp=pt.getActualTypeArguments()[0];
  if (atp instanceof Class)   return true;
  if (atp instanceof ParameterizedType)   return (((ParameterizedType)atp).getRawType() instanceof Class);
  return false;
}
