def splithost(url):
    "splithost('//host[:port]/path') --> 'host[:port]', '/path'."
    global _hostprog
    if (_hostprog is None):
        import re
        _hostprog = re.compile('^//([^/?]*)(.*)$')
    match = _hostprog.match(url)
    if match:
        return match.group(1, 2)
    return (None, url)
