def noheaders():
    'Return an empty mimetools.Message object.'
    global _noheaders
    if (_noheaders is None):
        import mimetools
        try:
            from cStringIO import StringIO
        except ImportError:
            from StringIO import StringIO
        _noheaders = mimetools.Message(StringIO(), 0)
        _noheaders.fp.close()
    return _noheaders
