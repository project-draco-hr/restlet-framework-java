def wait_impl(self, cpid):
    for i in range(10):
        (spid, status) = os.waitpid(cpid, os.WNOHANG)
        if (spid == cpid):
            break
        time.sleep(1.0)
    self.assertEqual(spid, cpid)
    self.assertEqual(status, 0, ('cause = %d, exit = %d' % ((status & 255), (status >> 8))))
