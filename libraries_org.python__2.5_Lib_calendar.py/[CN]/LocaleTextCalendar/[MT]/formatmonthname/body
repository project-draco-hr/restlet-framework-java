def formatmonthname(self, theyear, themonth, width, withyear=True):
    with TimeEncoding(self.locale) as encoding:
        s = month_name[themonth]
        if (encoding is not None):
            s = s.decode(encoding)
        if withyear:
            s = ('%s %r' % (s, theyear))
        return s.center(width)
