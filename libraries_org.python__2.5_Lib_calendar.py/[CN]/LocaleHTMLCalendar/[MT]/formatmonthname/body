def formatmonthname(self, theyear, themonth, withyear=True):
    with TimeEncoding(self.locale) as encoding:
        s = month_name[themonth]
        if (encoding is not None):
            s = s.decode(encoding)
        if withyear:
            s = ('%s %s' % (s, theyear))
        return ('<tr><th colspan="7" class="month">%s</th></tr>' % s)
