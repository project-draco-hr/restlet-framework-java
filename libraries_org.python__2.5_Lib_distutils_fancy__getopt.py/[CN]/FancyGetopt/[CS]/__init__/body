def __init__(self, option_table=None):
    self.option_table = option_table
    self.option_index = {}
    if self.option_table:
        self._build_index()
    self.alias = {}
    self.negative_alias = {}
    self.short_opts = []
    self.long_opts = []
    self.short2long = {}
    self.attr_name = {}
    self.takes_arg = {}
    self.option_order = []
