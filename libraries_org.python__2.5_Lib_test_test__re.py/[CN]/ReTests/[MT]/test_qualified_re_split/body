def test_qualified_re_split(self):
    self.assertEqual(re.split(':', ':a:b::c', 2), ['', 'a', 'b::c'])
    self.assertEqual(re.split(':', 'a:b:c:d', 2), ['a', 'b', 'c:d'])
    self.assertEqual(re.split('(:)', ':a:b::c', 2), ['', ':', 'a', ':', 'b::c'])
    self.assertEqual(re.split('(:*)', ':a:b::c', 2), ['', ':', 'a', ':', 'b::c'])
