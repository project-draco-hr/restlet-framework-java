{
  String loggerName=getApplication().getLogService().getContextLoggerName();
  if (loggerName == null) {
    String applicationName=(getApplication().getName() == null) ? Integer.toString(getApplication().hashCode()) : getApplication().getName();
    loggerName=Application.class.getCanonicalName() + "." + applicationName;
  }
  return new ApplicationContext(getApplication(),getParentContext(),Logger.getLogger(loggerName));
}
