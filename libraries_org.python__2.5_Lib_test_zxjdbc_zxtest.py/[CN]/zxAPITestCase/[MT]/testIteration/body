def testIteration(self):
    'testing the iteration protocol'
    c = self.cursor()
    try:
        cnt = 0
        c.execute('select * from zxtesting')
        for a in c:
            self.assertEquals(3, len(a))
            cnt += 1
        self.assertEquals(7, cnt)
        cnt = 0
        c.execute('select * from zxtesting')
        while 1:
            try:
                self.assertEquals(3, len(c.next()))
            except StopIteration:
                break
            cnt += 1
        self.assertEquals(7, cnt)
    finally:
        c.close()
