def checkSci(self, n, digits):
    result = sci(n, digits)
    if isinstance(n, StringType):
        n = repr(n)
    expected = ('%.*e' % (digits, float(n)))
    (num, exp) = expected.split('e')
    if (len(exp) < 4):
        exp = ((exp[0] + '0') + exp[1:])
    expected = ('%se%s' % (num, exp))
    self.assertEquals(result, expected)
