def __init__(self, host, port):
    "\n        Initializes the handler with a specific host address and port.\n\n        The attribute 'closeOnError' is set to 1 - which means that if\n        a socket error occurs, the socket is silently closed and then\n        reopened on the next logging call.\n        "
    logging.Handler.__init__(self)
    self.host = host
    self.port = port
    self.sock = None
    self.closeOnError = 0
    self.retryTime = None
    self.retryStart = 1.0
    self.retryMax = 30.0
    self.retryFactor = 2.0
