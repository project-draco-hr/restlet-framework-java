def show(caps):
    print 'Mailcap files:'
    for fn in listmailcapfiles():
        print ('\t' + fn)
    print 
    if (not caps):
        caps = getcaps()
    print 'Mailcap entries:'
    print 
    ckeys = caps.keys()
    ckeys.sort()
    for type in ckeys:
        print type
        entries = caps[type]
        for e in entries:
            keys = e.keys()
            keys.sort()
            for k in keys:
                print ('  %-15s' % k), e[k]
            print 
