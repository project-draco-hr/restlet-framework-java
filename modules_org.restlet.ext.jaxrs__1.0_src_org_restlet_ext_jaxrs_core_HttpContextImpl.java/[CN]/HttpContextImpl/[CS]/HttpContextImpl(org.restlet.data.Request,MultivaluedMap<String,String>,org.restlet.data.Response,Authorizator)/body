{
  super(request.getResourceRef(),templateParametersEncoded);
  if (templateParametersEncoded == null)   throw new IllegalArgumentException("The templateParameter must not be null");
  if (response == null)   throw new IllegalArgumentException("The Restlet Response must not be null");
  if (request == null)   throw new IllegalArgumentException("The Restlet Request must not be null");
  if (authorizator == null)   throw new IllegalArgumentException("The Authorizator must not be null.");
  this.request=request;
  this.response=response;
  this.authorizator=authorizator;
}
