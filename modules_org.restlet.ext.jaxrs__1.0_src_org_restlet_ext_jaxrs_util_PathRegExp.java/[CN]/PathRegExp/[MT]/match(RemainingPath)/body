{
  String givenPath=remainingPath.getWithoutParams();
  Map<String,String> templateVars=new HashMap<String,String>();
  boolean pathSuppl=!givenPath.endsWith("/");
  if (pathSuppl)   givenPath+='/';
  boolean matches=template.parse(givenPath,(Map)templateVars) >= 0;
  if (!matches)   return null;
  String finalCapturingGroup=templateVars.remove(VARNAME_FUER_REST);
  if (finalCapturingGroup.length() > 0) {
    if (pathSuppl && finalCapturingGroup.endsWith("/"))     finalCapturingGroup=finalCapturingGroup.substring(0,finalCapturingGroup.length() - 1);
    if (!finalCapturingGroup.startsWith("/"))     finalCapturingGroup="/" + finalCapturingGroup;
  }
  return new MatchingResult(templateVars,finalCapturingGroup,templateVars.size());
}
