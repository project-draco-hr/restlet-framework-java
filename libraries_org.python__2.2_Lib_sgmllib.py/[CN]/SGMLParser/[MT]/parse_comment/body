def parse_comment(self, i, report=1):
    rawdata = self.rawdata
    if (rawdata[i:(i + 4)] != '<!--'):
        self.error('unexpected call to parse_comment()')
    match = commentclose.search(rawdata, (i + 4))
    if (not match):
        return (-1)
    if report:
        j = match.start(0)
        self.handle_comment(rawdata[(i + 4):j])
    return match.end(0)
