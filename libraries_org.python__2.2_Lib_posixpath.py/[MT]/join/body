def join(a, *p):
    "Join two or more pathname components, inserting '/' as needed"
    path = a
    for b in p:
        if (b[:1] == '/'):
            path = b
        elif ((path == '') or (path[(-1):] == '/')):
            path = (path + b)
        else:
            path = ((path + '/') + b)
    return path
