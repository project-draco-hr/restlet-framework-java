def split(p):
    'Split a pathname.  Returns tuple "(head, tail)" where "tail" is\n    everything after the final slash.  Either part may be empty.'
    i = (p.rfind('/') + 1)
    (head, tail) = (p[:i], p[i:])
    if (head and (head != ('/' * len(head)))):
        while (head[(-1)] == '/'):
            head = head[:(-1)]
    return (head, tail)
