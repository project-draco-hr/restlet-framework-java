def splitext(p):
    'Split a path into root and extension.\n    The extension is everything starting at the last dot in the last\n    pathname component; the root is everything before that.\n    It is always true that root + ext == p.'
    (root, ext) = ('', '')
    for c in p:
        if (c == ':'):
            (root, ext) = (((root + ext) + c), '')
        elif (c == '.'):
            if ext:
                (root, ext) = ((root + ext), c)
            else:
                ext = c
        elif ext:
            ext = (ext + c)
        else:
            root = (root + c)
    return (root, ext)
