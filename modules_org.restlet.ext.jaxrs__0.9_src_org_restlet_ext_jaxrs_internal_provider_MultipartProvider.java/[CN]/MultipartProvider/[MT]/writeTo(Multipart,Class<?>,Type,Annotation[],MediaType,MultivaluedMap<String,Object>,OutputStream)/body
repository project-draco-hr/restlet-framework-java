{
  try {
    multipart.writeTo(entityStream);
  }
 catch (  final MessagingException e) {
    if (e.getCause() instanceof IOException) {
      throw (IOException)e.getCause();
    }
    final IOException ioExc=new IOException("Could not serialize the Multipart");
    ioExc.initCause(e);
    throw ioExc;
  }
}
