def test_len(self):
    eq = self.assertEqual
    eq(base64mime.base64_len('hello'), len(base64mime.encode('hello', eol='')))
    for size in range(15):
        if (size == 0):
            bsize = 0
        elif (size <= 3):
            bsize = 4
        elif (size <= 6):
            bsize = 8
        elif (size <= 9):
            bsize = 12
        elif (size <= 12):
            bsize = 16
        else:
            bsize = 20
        eq(base64mime.base64_len(('x' * size)), bsize)
