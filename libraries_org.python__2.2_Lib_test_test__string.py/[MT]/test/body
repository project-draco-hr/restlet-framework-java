def test(name, input, output, *args):
    if (not names.has_key(name)):
        print_test(name, 2)
        names[name] = 1
    f = getattr(string, name)
    try:
        value = apply(f, ((input,) + args))
    except:
        value = sys.exc_type
    if (verbose and (value != output)):
        print 'value=', value, ', output=', output
    assert (value == output)
