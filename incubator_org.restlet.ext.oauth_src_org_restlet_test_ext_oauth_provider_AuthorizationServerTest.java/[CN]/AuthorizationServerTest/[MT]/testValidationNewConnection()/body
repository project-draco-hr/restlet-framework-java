{
  for (int i=0; i < 20; i++) {
    ClientResource cr=new ClientResource(prot + "://localhost:" + serverPort+ "/oauth/validate");
    JSONObject body=new JSONObject();
    body.put("access_token",client.getToken());
    body.put("uri","http://test.com");
    JsonRepresentation jr=new JsonRepresentation(body);
    Representation r=cr.post(jr);
    assertNotNull(r);
    assertEquals("Response content type test",r.getMediaType(),MediaType.APPLICATION_JSON);
    r.release();
    cr.release();
  }
}
