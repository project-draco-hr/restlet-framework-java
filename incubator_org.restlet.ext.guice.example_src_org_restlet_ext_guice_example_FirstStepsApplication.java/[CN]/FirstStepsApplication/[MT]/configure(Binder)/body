{
  binder.bind(Handler.class).annotatedWith(HelloWorld.class).to(HelloWorldResource.class);
  binder.bind(ServerResource.class).annotatedWith(HelloWorld.class).to(HelloServerResource.class);
  binder.bindConstant().annotatedWith(named(HelloWorldResource.HELLO_MSG)).to("Hello, Restlet 1.1 - Guice 1!");
  binder.bindConstant().annotatedWith(named(HelloServerResource.HELLO_MSG)).to("Hello, Restlet 2.0 - Guice 1!");
}
