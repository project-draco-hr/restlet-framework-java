def show(self, textin):
    if isinstance(textin, list):
        result = []
        for i in range(len(textin)):
            result.append(('  %d: %r' % (i, textin[i])))
        result = '\n'.join(result)
    elif isinstance(textin, basestring):
        result = ('  %s\n' % repr(textin))
    return result
