def __getstate(self):
    (us2, us3) = divmod(self.__microsecond, 256)
    (us1, us2) = divmod(us2, 256)
    basestate = (('%c' * 6) % (self.__hour, self.__minute, self.__second, us1, us2, us3))
    if (self._tzinfo is None):
        return (basestate,)
    else:
        return (basestate, self._tzinfo)
