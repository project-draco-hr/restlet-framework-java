{
  while (true) {
    try {
      getHelper().handleNext();
      for (      DefaultServerConnection connection : getHelper().getConnections()) {
        connection.control();
      }
      Thread.sleep(100);
    }
 catch (    Exception ex) {
      this.helper.getLogger().log(Level.WARNING,"Unexpected error while controlling connections",ex);
    }
  }
}
