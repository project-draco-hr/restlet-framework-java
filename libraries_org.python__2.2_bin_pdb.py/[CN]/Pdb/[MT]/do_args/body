def do_args(self, arg):
    f = self.curframe
    co = f.f_code
    dict = f.f_locals
    n = co.co_argcount
    if (co.co_flags & 4):
        n = (n + 1)
    if (co.co_flags & 8):
        n = (n + 1)
    for i in range(n):
        name = co.co_varnames[i]
        print name, '=',
        if dict.has_key(name):
            print dict[name]
        else:
            print '*** undefined ***'
