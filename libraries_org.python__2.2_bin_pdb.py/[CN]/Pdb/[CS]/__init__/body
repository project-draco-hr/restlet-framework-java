def __init__(self):
    bdb.Bdb.__init__(self)
    cmd.Cmd.__init__(self)
    self.prompt = '(Pdb) '
    self.aliases = {}
    try:
        import readline
    except ImportError:
        pass
    self.rcLines = []
    if os.environ.has_key('HOME'):
        envHome = os.environ['HOME']
        try:
            rcFile = open(os.path.join(envHome, '.pdbrc'))
        except IOError:
            pass
        else:
            for line in rcFile.readlines():
                self.rcLines.append(line)
            rcFile.close()
    try:
        rcFile = open('.pdbrc')
    except IOError:
        pass
    else:
        for line in rcFile.readlines():
            self.rcLines.append(line)
        rcFile.close()
