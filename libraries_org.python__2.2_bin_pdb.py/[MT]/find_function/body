def find_function(funcname, filename):
    cre = re.compile(('def\\s+%s\\s*[(]' % funcname))
    try:
        fp = open(filename)
    except IOError:
        return None
    lineno = 1
    answer = None
    while 1:
        line = fp.readline()
        if (line == ''):
            break
        if cre.match(line):
            answer = (funcname, filename, lineno)
            break
        lineno = (lineno + 1)
    fp.close()
    return answer
