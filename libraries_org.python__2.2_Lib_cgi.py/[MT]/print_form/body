def print_form(form):
    'Dump the contents of a form as HTML.'
    keys = form.keys()
    keys.sort()
    print 
    print '<H3>Form Contents:</H3>'
    if (not keys):
        print '<P>No form fields.'
    print '<DL>'
    for key in keys:
        print (('<DT>' + escape(key)) + ':'),
        value = form[key]
        print (('<i>' + escape(`type(value)`)) + '</i>')
        print ('<DD>' + escape(`value`))
    print '</DL>'
    print 
