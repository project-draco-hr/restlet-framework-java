def print_environ(environ=os.environ):
    'Dump the shell environment as HTML.'
    keys = environ.keys()
    keys.sort()
    print 
    print '<H3>Shell Environment:</H3>'
    print '<DL>'
    for key in keys:
        print '<DT>', escape(key), '<DD>', escape(environ[key])
    print '</DL>'
    print 
