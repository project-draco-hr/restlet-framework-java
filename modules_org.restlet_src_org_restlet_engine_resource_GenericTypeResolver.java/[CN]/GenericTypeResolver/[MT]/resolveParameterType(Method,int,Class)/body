{
  if (parameterIndex >= 0 && parameterIndex < method.getGenericParameterTypes().length) {
    Type genericType=method.getGenericParameterTypes()[parameterIndex];
    Type rawType=getRawType(genericType,getTypeVariablesMap(clazz));
    return (rawType instanceof Class ? (Class)rawType : method.getParameterTypes()[parameterIndex]);
  }
  return null;
}
