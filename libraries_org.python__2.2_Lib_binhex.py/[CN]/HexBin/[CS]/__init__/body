def __init__(self, ifp):
    if (type(ifp) == type('')):
        ifp = open(ifp)
    while 1:
        ch = ifp.read(1)
        if (not ch):
            raise Error, 'No binhex data found'
        if (ch == '\r'):
            continue
        if (ch == ':'):
            break
        if (ch != '\n'):
            dummy = ifp.readline()
    hqxifp = _Hqxdecoderengine(ifp)
    self.ifp = _Rledecoderengine(hqxifp)
    self.crc = 0
    self._readheader()
