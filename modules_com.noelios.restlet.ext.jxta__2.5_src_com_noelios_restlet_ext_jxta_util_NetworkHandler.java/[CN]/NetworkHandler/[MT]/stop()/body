{
  if (network == null) {
    throw new IllegalStateException("network already stopped");
  }
  if (logger.isLoggable(Level.FINE)) {
    logger.log(Level.FINE,"network stopping");
  }
  network.stop();
  network=null;
  if (logger.isLoggable(Level.FINE)) {
    logger.log(Level.FINE,"network stopped");
  }
}
