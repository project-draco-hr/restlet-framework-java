def _scan_name(self, i, declstartpos):
    rawdata = self.rawdata
    n = len(rawdata)
    if (i == n):
        return (None, (-1))
    m = _declname_match(rawdata, i)
    if m:
        s = m.group()
        name = s.strip()
        if ((i + len(s)) == n):
            return (None, (-1))
        return (string.lower(name), m.end())
    else:
        self.updatepos(declstartpos, i)
        self.error('expected name token')
