{
switch (authenticate(request)) {
case 1:
    if (authorize(request)) {
      accept(request,response);
    }
 else {
      forbid(response);
    }
  break;
case 0:
challenge(response);
break;
case -1:
if (isRechallengeEnabled()) {
challenge(response);
}
 else {
forbid(response);
}
break;
}
return CONTINUE;
}
