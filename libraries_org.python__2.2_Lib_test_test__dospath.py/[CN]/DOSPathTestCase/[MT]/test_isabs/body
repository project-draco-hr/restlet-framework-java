def test_isabs(self):
    isabs = dospath.isabs
    self.assert_(isabs('c:\\'))
    self.assert_(isabs('\\\\conky\\mountpoint\\'))
    self.assert_(isabs('\\foo'))
    self.assert_(isabs('\\foo\\bar'))
    self.failIf(isabs('foo'))
    self.failIf(isabs('foo\\'))
    self.failIf(isabs('foo\\bar'))
    self.failIf(isabs('c:foo'))
    self.failIf(isabs('c:foo\\'))
    self.failIf(isabs('c:foo\\bar'))
