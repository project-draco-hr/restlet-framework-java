{
  if (resource == null)   throw new IllegalArgumentException("The root resource class must not be null");
  try {
    addPathSegments(ResourceClass.getPathTemplate(resource));
  }
 catch (  IllegalPathOnClassException e) {
    throw e.getCause();
  }
catch (  MissingAnnotationException e) {
    throw new IllegalArgumentException("The resource class " + resource.getName() + " requires an annotation @Path");
  }
  return this;
}
