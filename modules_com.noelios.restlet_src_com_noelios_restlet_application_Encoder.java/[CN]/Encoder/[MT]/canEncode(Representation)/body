{
  boolean result=false;
  if (representation != null) {
    boolean identity=true;
    for (final Iterator<Encoding> iter=representation.getEncodings().iterator(); identity && iter.hasNext(); ) {
      identity=(iter.next().equals(Encoding.IDENTITY));
    }
    result=identity;
  }
  if (result) {
    result=(getMinimumSize() == ENCODE_ALL_SIZES) || (representation.getSize() == Representation.UNKNOWN_SIZE) || (representation.getSize() >= getMinimumSize());
  }
  if (result) {
    final MediaType mediaType=representation.getMediaType();
    boolean accepted=false;
    for (final Iterator<MediaType> iter=getAcceptedMediaTypes().iterator(); !accepted && iter.hasNext(); ) {
      accepted=iter.next().includes(mediaType);
    }
    result=accepted;
  }
  if (result) {
    final MediaType mediaType=representation.getMediaType();
    boolean rejected=false;
    for (final Iterator<MediaType> iter=getIgnoredMediaTypes().iterator(); !rejected && iter.hasNext(); ) {
      rejected=iter.next().includes(mediaType);
    }
    result=!rejected;
  }
  return result;
}
