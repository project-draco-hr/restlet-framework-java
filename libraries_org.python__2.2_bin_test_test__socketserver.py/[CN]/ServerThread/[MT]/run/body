def run(self):


    class svrcls(MyMixinServer, self.__svrcls):
        pass
    if verbose:
        print 'thread: creating server'
    svr = svrcls(self.__addr, self.__hdlrcls)
    if verbose:
        print 'thread: serving three times'
    svr.serve_a_few()
    if verbose:
        print 'thread: done'
