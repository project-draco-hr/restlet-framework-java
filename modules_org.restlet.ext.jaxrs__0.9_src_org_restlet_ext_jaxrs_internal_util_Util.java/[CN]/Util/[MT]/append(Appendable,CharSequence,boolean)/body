{
  if (!convertBraces) {
    stb.append(string);
    return;
  }
  final int l=string.length();
  for (int i=0; i < l; i++) {
    final char c=string.charAt(i);
    if (c == '{') {
      stb.append("%7B");
    }
 else     if (c == '}') {
      stb.append("%7D");
    }
 else {
      stb.append(c);
    }
  }
}
