def join(s, *p):
    path = s
    for t in p:
        if ((not s) or isabs(t)):
            path = t
            continue
        if (t[:1] == ':'):
            t = t[1:]
        if (':' not in path):
            path = (':' + path)
        if (path[(-1):] != ':'):
            path = (path + ':')
        path = (path + t)
    return path
