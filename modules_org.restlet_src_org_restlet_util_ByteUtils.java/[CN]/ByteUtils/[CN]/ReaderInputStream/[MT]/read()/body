{
  int result=-1;
  if (this.buffer == null) {
    final String line=this.localReader.readLine();
    if (line != null) {
      this.buffer=line.getBytes(this.characterSet.getName());
      this.index=0;
    }
  }
  if (this.buffer != null) {
    result=this.buffer[this.index++];
    if (this.index == this.buffer.length) {
      this.buffer=null;
    }
  }
  return result;
}
