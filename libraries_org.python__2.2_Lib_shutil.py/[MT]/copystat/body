def copystat(src, dst):
    'Copy all stat info (mode bits, atime and mtime) from src to dst'
    st = os.stat(src)
    mode = stat.S_IMODE(st[stat.ST_MODE])
    if hasattr(os, 'utime'):
        os.utime(dst, (st[stat.ST_ATIME], st[stat.ST_MTIME]))
    if hasattr(os, 'chmod'):
        os.chmod(dst, mode)
