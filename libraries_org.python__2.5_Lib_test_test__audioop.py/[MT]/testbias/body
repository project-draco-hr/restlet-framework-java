def testbias(data):
    if verbose:
        print 'bias'
    d1 = audioop.bias(data[0], 1, 100)
    d2 = audioop.bias(data[1], 2, 100)
    d4 = audioop.bias(data[2], 4, 100)
    if ((audioop.avg(d1, 1) != 101) or (audioop.avg(d2, 2) != 101) or (audioop.avg(d4, 4) != 101)):
        return 0
    return 1
