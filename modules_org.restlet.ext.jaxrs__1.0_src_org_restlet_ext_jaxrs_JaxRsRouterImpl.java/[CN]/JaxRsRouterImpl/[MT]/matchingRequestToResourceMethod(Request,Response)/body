{
  String uriRemainingPart=restletRequest.getResourceRef().getRemainingPart();
  ResClAndTemplate rcat=identifyRootResourceClass(uriRemainingPart);
  ResObjAndPath resourceObjectAndPath=obtainObjectThatHandleRequest(rcat,restletRequest,restletResponse);
  MatchingResult matchingResult=resourceObjectAndPath.matchingResult;
  @SuppressWarnings("unchecked") List<Collection<MediaType>> accMediaTypes=(List)Util.sortMetadataList((Collection)restletRequest.getClientInfo().getAcceptedMediaTypes());
  MediaType givenMediaType=restletRequest.getEntity().getMediaType();
  ResObjAndMeth method=idenifyMethodThatHandleRequest(resourceObjectAndPath,restletResponse,givenMediaType,accMediaTypes);
  method.matchingResult=matchingResult;
  return method;
}
