{
  OutputStream outputStream=null;
  try {
    outputStream=new FileOutputStream(representation.getDisposition().getFilename());
    representation.write(outputStream);
  }
 catch (  IOException ex) {
    throw new RuntimeException("cannot write to " + representation.getDisposition().getFilename(),ex);
  }
 finally {
    try {
      if (outputStream != null) {
        outputStream.close();
      }
    }
 catch (    IOException ex) {
    }
  }
}
