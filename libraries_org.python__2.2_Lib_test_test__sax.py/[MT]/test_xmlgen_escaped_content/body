def test_xmlgen_escaped_content():
    result = StringIO()
    gen = XMLGenerator(result)
    gen.startDocument()
    gen.startElement('doc', {})
    gen.characters(unicode('\xa0\\u3042', 'unicode-escape'))
    gen.endElement('doc')
    gen.endDocument()
    return (result.getvalue() == (start + '<doc>\xa0&#12354;</doc>'))
