{
  int result=0;
  if (getConnection().getSslState() == SslState.READING_APPLICATION_DATA) {
    getConnection().setSslState(SslState.WRITING_APPLICATION_DATA);
  }
  drain();
  if ((getPacketBuffer().isFilling()) || (getConnection().getSslState() == SslState.HANDSHAKING)) {
    int srcSize=src.remaining();
    if (srcSize > 0) {
      while (getPacketBuffer().hasRemaining() && (getConnection().getOutboundWay().getIoState() != IoState.IDLE) && src.hasRemaining()) {
        SSLEngineResult sslResult=wrap(src);
        getConnection().handleResult(sslResult,getPacketBuffer(),src,this);
        drain();
      }
      result=srcSize - src.remaining();
    }
  }
  return result;
}
