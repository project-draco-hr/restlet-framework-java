{
  final Restlet restlet=new Restlet(){
    @Override public void handle(    Request request,    Response response){
      response.setStatus(Status.CLIENT_ERROR_NOT_FOUND);
    }
  }
;
  final StatusFilter statusFilter=new StatusFilter(null,true,"admin@example.com",new Reference("http://www.example.com"));
  statusFilter.setNext(restlet);
  try {
    new Server(Protocol.HTTP,statusFilter).start();
  }
 catch (  Exception e) {
    e.printStackTrace();
  }
}
