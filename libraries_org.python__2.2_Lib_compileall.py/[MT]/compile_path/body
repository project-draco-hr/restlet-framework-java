def compile_path(skip_curdir=1, maxlevels=0, force=0):
    'Byte-compile all module on sys.path.\n\n    Arguments (all optional):\n\n    skip_curdir: if true, skip current directory (default true)\n    maxlevels:   max recursion level (default 0)\n    force: as for compile_dir() (default 0)\n\n    '
    success = 1
    for dir in sys.path:
        if (((not dir) or (dir == os.curdir)) and skip_curdir):
            print 'Skipping current directory'
        else:
            success = (success and compile_dir(dir, maxlevels, None, force))
    return success
