def main():
    global verbose, filename_only
    try:
        (opts, args) = getopt.getopt(sys.argv[1:], 'qv')
    except getopt.error as msg:
        errprint(msg)
        return
    for (o, a) in opts:
        if (o == '-q'):
            filename_only = (filename_only + 1)
        if (o == '-v'):
            verbose = (verbose + 1)
    if (not args):
        errprint('Usage:', sys.argv[0], '[-v] file_or_directory ...')
        return
    for arg in args:
        check(arg)
