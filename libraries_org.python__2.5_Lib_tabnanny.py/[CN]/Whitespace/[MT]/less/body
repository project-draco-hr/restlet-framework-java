def less(self, other):
    if (self.n >= other.n):
        return False
    if (self.is_simple and other.is_simple):
        return (self.nt <= other.nt)
    n = (max(self.longest_run_of_spaces(), other.longest_run_of_spaces()) + 1)
    for ts in range(2, (n + 1)):
        if (self.indent_level(ts) >= other.indent_level(ts)):
            return False
    return True
