{
  try {
    RestletContainer myContainer=new RestletContainer();
    myContainer.addServer("HTTP Server",Protocols.HTTP,8182);
    HostRouter host=new HostRouter(myContainer,8182);
    myContainer.setRoot(host);
    DirectoryHandler directory=new DirectoryHandler(myContainer,"file:///D:/Restlet/standard/www/docs/api/",true,"index");
    host.getScorers().add("/",directory);
    myContainer.start();
  }
 catch (  Exception e) {
    e.printStackTrace();
  }
}
