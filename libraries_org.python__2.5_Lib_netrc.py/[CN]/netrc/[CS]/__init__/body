def __init__(self, file=None):
    if (file is None):
        try:
            file = os.path.join(os.environ['HOME'], '.netrc')
        except KeyError:
            raise IOError('Could not find .netrc: $HOME is not set')
    self.hosts = {}
    self.macros = {}
    with open(file) as fp:
        self._parse(file, fp)
