def __init__(self, tarfile, tarinfo):
    self.fileobj = _FileInFile(tarfile.fileobj, tarinfo.offset_data, tarinfo.size, getattr(tarinfo, 'sparse', None))
    self.name = tarinfo.name
    self.mode = 'r'
    self.closed = False
    self.size = tarinfo.size
    self.position = 0
    self.buffer = ''
