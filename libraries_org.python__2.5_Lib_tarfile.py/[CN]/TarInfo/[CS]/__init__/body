def __init__(self, name=''):
    'Construct a TarInfo object. name is the optional name\n           of the member.\n        '
    self.name = name
    self.mode = 438
    self.uid = 0
    self.gid = 0
    self.size = 0
    self.mtime = 0
    self.chksum = 0
    self.type = REGTYPE
    self.linkname = ''
    self.uname = 'user'
    self.gname = 'group'
    self.devmajor = 0
    self.devminor = 0
    self.offset = 0
    self.offset_data = 0
