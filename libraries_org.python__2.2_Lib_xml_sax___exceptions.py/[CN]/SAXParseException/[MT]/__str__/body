def __str__(self):
    'Create a string representation of the exception.'
    sysid = self.getSystemId()
    if (sysid is None):
        sysid = '<unknown>'
    linenum = self.getLineNumber()
    if (linenum is None):
        linenum = '?'
    colnum = self.getColumnNumber()
    if (colnum is None):
        colnum = '?'
    return ('%s:%s:%s: %s' % (sysid, linenum, colnum, self._msg))
