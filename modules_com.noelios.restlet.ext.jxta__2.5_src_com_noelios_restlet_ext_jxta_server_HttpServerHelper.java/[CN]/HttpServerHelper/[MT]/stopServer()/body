{
  if (server == null) {
    throw new IllegalStateException("server not started");
  }
  if (logger.isLoggable(Level.FINE)) {
    logger.log(Level.FINE,"stopping server");
  }
  server.stop();
  server=null;
  if (logger.isLoggable(Level.FINE)) {
    logger.log(Level.FINE,"stopped server");
  }
}
