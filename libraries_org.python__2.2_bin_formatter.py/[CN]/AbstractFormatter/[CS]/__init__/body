def __init__(self, writer):
    self.writer = writer
    self.align = None
    self.align_stack = []
    self.font_stack = []
    self.margin_stack = []
    self.spacing = None
    self.style_stack = []
    self.nospace = 1
    self.softspace = 0
    self.para_end = 1
    self.parskip = 0
    self.hard_break = 1
    self.have_label = 0
