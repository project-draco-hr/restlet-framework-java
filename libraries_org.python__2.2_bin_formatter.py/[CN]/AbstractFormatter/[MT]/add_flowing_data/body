def add_flowing_data(self, data, whitespace=string.whitespace, join=string.join, split=string.split):
    if (not data):
        return
    prespace = (data[:1] in whitespace)
    postspace = (data[(-1):] in whitespace)
    data = join(split(data))
    if (self.nospace and (not data)):
        return
    elif (prespace or self.softspace):
        if (not data):
            if (not self.nospace):
                self.softspace = 1
                self.parskip = 0
            return
        if (not self.nospace):
            data = (' ' + data)
    self.hard_break = self.nospace = self.para_end = self.parskip = self.have_label = 0
    self.softspace = postspace
    self.writer.send_flowing_data(data)
