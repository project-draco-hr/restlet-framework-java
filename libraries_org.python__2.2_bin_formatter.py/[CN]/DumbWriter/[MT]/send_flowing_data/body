def send_flowing_data(self, data):
    if (not data):
        return
    atbreak = (self.atbreak or (data[0] in string.whitespace))
    col = self.col
    maxcol = self.maxcol
    write = self.file.write
    for word in data.split():
        if atbreak:
            if ((col + len(word)) >= maxcol):
                write('\n')
                col = 0
            else:
                write(' ')
                col = (col + 1)
        write(word)
        col = (col + len(word))
        atbreak = 1
    self.col = col
    self.atbreak = (data[(-1)] in string.whitespace)
