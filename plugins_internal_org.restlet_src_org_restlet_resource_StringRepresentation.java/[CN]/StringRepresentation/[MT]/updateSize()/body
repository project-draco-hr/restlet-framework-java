{
  if (getValue() != null) {
    try {
      setSize(getValue().getBytes(getCharacterSet().getName()).length);
    }
 catch (    UnsupportedEncodingException e) {
      Logger.getLogger(StringRepresentation.class.getCanonicalName());
      setSize(UNKNOWN_SIZE);
    }
  }
 else {
    setSize(UNKNOWN_SIZE);
  }
}
