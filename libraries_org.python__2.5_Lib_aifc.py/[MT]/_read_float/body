def _read_float(f):
    expon = _read_short(f)
    sign = 1
    if (expon < 0):
        sign = (-1)
        expon = (expon + 32768)
    himant = _read_ulong(f)
    lomant = _read_ulong(f)
    if (expon == himant == lomant == 0):
        f = 0.0
    elif (expon == 32767):
        f = _HUGE_VAL
    else:
        expon = (expon - 16383)
        f = (((himant * 4294967296L) + lomant) * pow(2.0, (expon - 63)))
    return (sign * f)
