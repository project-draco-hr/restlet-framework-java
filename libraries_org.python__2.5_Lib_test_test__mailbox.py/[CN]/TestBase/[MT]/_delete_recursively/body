def _delete_recursively(self, target):
    if os.path.isdir(target):
        for (path, dirs, files) in os.walk(target, topdown=False):
            for name in files:
                os.remove(os.path.join(path, name))
            for name in dirs:
                os.rmdir(os.path.join(path, name))
        os.rmdir(target)
    elif os.path.exists(target):
        os.remove(target)
