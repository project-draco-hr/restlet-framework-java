def get_type(self, failobj=None):
    "Returns the message's content type.\n\n        The returned string is coerced to lowercase and returned as a single\n        string of the form `maintype/subtype'.  If there was no Content-Type\n        header in the message, failobj is returned (defaults to None).\n        "
    missing = []
    value = self.get('content-type', missing)
    if (value is missing):
        return failobj
    return paramre.split(value)[0].lower().strip()
