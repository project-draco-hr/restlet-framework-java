{
  int result=0;
  if (!isBlocking()) {
    int available=getInputStream().available();
    int readLength=0;
    if (available > 0) {
      readLength=Math.min(available,target.remaining());
    }
 else {
      readLength=target.remaining();
    }
    result=read(target,readLength);
  }
 else {
    result=read(target,IoUtils.BUFFER_SIZE);
  }
  return result;
}
