def test_interface_single_arg(self):
    arg = 'spam'
    exc = Exception(arg)
    results = ([len(exc.args), 1], [exc.args[0], arg], [exc.message, arg], [str(exc), str(arg)], [unicode(exc), unicode(arg)], [repr(exc), (exc.__class__.__name__ + repr(exc.args))], [exc[0], arg])
    self.interface_test_driver(results)
