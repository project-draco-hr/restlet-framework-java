compiler_class = {'unix': ('unixccompiler', 'UnixCCompiler', 'standard UNIX-style compiler'), 'msvc': ('msvccompiler', 'MSVCCompiler', 'Microsoft Visual C++'), 'cygwin': ('cygwinccompiler', 'CygwinCCompiler', 'Cygwin port of GNU C Compiler for Win32'), 'mingw32': ('cygwinccompiler', 'Mingw32CCompiler', 'Mingw32 port of GNU C Compiler for Win32'), 'bcpp': ('bcppcompiler', 'BCPPCompiler', 'Borland C++ Compiler'), 'mwerks': ('mwerkscompiler', 'MWerksCompiler', 'MetroWerks CodeWarrior'), 'emx': ('emxccompiler', 'EMXCCompiler', 'EMX port of GNU C Compiler for OS/2'), 'jython': ('jythoncompiler', 'JythonCompiler', 'Compiling is not supported on Jython'), }
