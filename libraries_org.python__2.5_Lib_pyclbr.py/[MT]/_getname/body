def _getname(g):
    parts = []
    (tokentype, token, start, end, line) = g.next()
    if ((tokentype != NAME) and (token != '*')):
        return (None, token)
    parts.append(token)
    while True:
        (tokentype, token, start, end, line) = g.next()
        if (token != '.'):
            break
        (tokentype, token, start, end, line) = g.next()
        if (tokentype != NAME):
            break
        parts.append(token)
    return ('.'.join(parts), token)
