def startDTD(self, name, public_id, system_id):
    self._out.write(('<!DOCTYPE %s' % name))
    if public_id:
        self._out.write((' PUBLIC %s %s' % (quoteattr((public_id or '')), quoteattr((system_id or '')))))
    elif system_id:
        self._out.write((' SYSTEM %s' % quoteattr((system_id or ''))))
