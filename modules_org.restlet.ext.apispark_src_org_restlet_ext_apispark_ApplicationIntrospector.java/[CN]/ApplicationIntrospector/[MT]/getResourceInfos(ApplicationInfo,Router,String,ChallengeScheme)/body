{
  List<ResourceInfo> result=new ArrayList<ResourceInfo>();
  if (router != null) {
    for (    Route route : router.getRoutes()) {
      ResourceInfo resourceInfo=getResourceInfo(applicationInfo,route,path,scheme);
      if (resourceInfo != null) {
        result.add(resourceInfo);
      }
    }
    if (router.getDefaultRoute() != null) {
      ResourceInfo resourceInfo=getResourceInfo(applicationInfo,router.getDefaultRoute(),path,scheme);
      if (resourceInfo != null) {
        result.add(resourceInfo);
      }
    }
  }
  return result;
}
