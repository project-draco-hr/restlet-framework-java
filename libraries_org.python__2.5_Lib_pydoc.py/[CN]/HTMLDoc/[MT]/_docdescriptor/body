def _docdescriptor(self, name, value, mod):
    results = []
    push = results.append
    if name:
        push(('<dl><dt><strong>%s</strong></dt>\n' % name))
    if (value.__doc__ is not None):
        doc = self.markup(getdoc(value), self.preformat)
        push(('<dd><tt>%s</tt></dd>\n' % doc))
    push('</dl>\n')
    return ''.join(results)
