def tempfilepager(text, cmd):
    'Page through text by invoking a program on a temporary file.'
    import tempfile
    filename = tempfile.mktemp()
    file = open(filename, 'w')
    file.write(text)
    file.close()
    try:
        os.system(((cmd + ' ') + filename))
    finally:
        os.unlink(filename)
