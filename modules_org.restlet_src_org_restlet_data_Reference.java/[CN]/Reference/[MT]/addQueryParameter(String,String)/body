{
  final String query=getQuery();
  if (query == null) {
    if (value == null) {
      setQuery(encode(name));
    }
 else {
      setQuery(encode(name) + '=' + encode(value));
    }
  }
 else {
    if (value == null) {
      setQuery(query + '&' + encode(name));
    }
 else {
      setQuery(query + '&' + encode(name)+ '='+ encode(value));
    }
  }
  return this;
}
