{
  String result=null;
  String all=toString(query,false);
  if (getBaseRef() != null) {
    String base=getBaseRef().toString(query,false);
    if ((base != null) && all.startsWith(base)) {
      result=all.substring(base.length());
    }
  }
 else {
    result=all;
  }
  return decode ? decode(result) : result;
}
