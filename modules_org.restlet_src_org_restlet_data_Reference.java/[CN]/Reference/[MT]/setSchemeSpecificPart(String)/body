{
  checkValidity(schemeSpecificPart);
  if (schemeSpecificPart == null) {
    schemeSpecificPart="";
  }
  if (schemeIndex != -1) {
    if (fragmentIndex != -1) {
      this.internalRef=this.internalRef.substring(0,schemeIndex + 1) + schemeSpecificPart + this.internalRef.substring(fragmentIndex);
    }
 else {
      this.internalRef=this.internalRef.substring(0,schemeIndex + 1) + schemeSpecificPart;
    }
  }
 else {
    if (fragmentIndex != -1) {
      this.internalRef=schemeSpecificPart + this.internalRef.substring(fragmentIndex);
    }
 else {
      this.internalRef=schemeSpecificPart;
    }
  }
  updateIndexes();
}
