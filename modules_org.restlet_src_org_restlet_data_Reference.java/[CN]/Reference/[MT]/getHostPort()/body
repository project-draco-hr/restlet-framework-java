{
  int result=-1;
  String authority=getAuthority();
  if (authority != null) {
    int index1=authority.indexOf('@');
    int index=authority.indexOf(':',(index1 == -1 ? 0 : index1));
    if (index != -1) {
      try {
        result=Integer.parseInt(authority.substring(index + 1));
      }
 catch (      NumberFormatException nfe) {
        Logger.getLogger(Reference.class.getCanonicalName()).log(Level.WARNING,"Can't parse hostPort : [hostRef,requestUri]=[" + getBaseRef() + ","+ internalRef+ "]");
      }
    }
  }
  return result;
}
