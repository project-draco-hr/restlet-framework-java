def display(self):
    ' using the formatter, display the results '
    if (self.formatter and (self.verbose > 0)):
        res = self.results
        if res:
            print  >> self.out, ''
            for a in self.formatter(res, map((lambda x: x[0]), self.headers)):
                print  >> self.out, a
            print  >> self.out, ''
