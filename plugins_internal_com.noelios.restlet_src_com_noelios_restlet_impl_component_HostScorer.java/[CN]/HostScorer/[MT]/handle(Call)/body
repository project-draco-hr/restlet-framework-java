{
  call.setBaseRef(new Reference(call.getProtocol().getSchemeName(),call.getServer().getName(),call.getServer().getPort(),null,null,null));
  if (logger.isLoggable(Level.FINE)) {
    logger.fine("New base URI: " + call.getBaseRef());
    logger.fine("New relative part: " + call.getRelativePart());
  }
  if (logger.isLoggable(Level.FINE)) {
    logger.fine("Delegating the call to the target Restlet");
  }
  super.handle(call);
}
