{
  Representation representation=null;
  URL wadlHtmlXsltUrl=Engine.getClassLoader().getResource("org/restlet/ext/wadl/htmlConvert.xsl");
  if (wadlHtmlXsltUrl != null) {
    try {
      setSaxSource(new SAXSource(new InputSource(this.getStream())));
      InputRepresentation xslRep=new InputRepresentation(wadlHtmlXsltUrl.openStream(),MediaType.APPLICATION_W3C_XSLT);
      representation=new TransformRepresentation(this,xslRep);
    }
 catch (    IOException e) {
      e.printStackTrace();
    }
  }
  return representation;
}
