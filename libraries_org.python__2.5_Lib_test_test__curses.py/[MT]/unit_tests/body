def unit_tests():
    from curses import ascii
    for (ch, expected) in [('a', 'a'), ('A', 'A'), (';', ';'), (' ', ' '), ('\x7f', '^?'), ('\n', '^J'), ('\x00', '^@'), ('\x8a', '!^J'), ('\xc1', '!A')]:
        if (ascii.unctrl(ch) != expected):
            print 'curses.unctrl fails on character', repr(ch)
