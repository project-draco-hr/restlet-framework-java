{
  Container container=new Container();
  container.getServers().add(Protocol.HTTP,8182);
  Application application=new Application(container){
    @Override public Restlet createRoot(){
      String target="http://www.google.com/search?q=site:mysite.org+${query('query')}";
      return new Redirector(getContext(),target,Redirector.MODE_CLIENT_TEMPORARY);
    }
  }
;
  container.getDefaultHost().attach("/search",application);
  container.start();
}
