def __add__(self, other):
    'Add a datetime and a timedelta.'
    if (not isinstance(other, timedelta)):
        return NotImplemented
    t = tmxxx(self.__year, self.__month, (self.__day + other.days), self.__hour, self.__minute, (self.__second + other.seconds), (self.__microsecond + other.microseconds))
    self._checkOverflow(t.year)
    result = datetime(t.year, t.month, t.day, t.hour, t.minute, t.second, t.microsecond, tzinfo=self._tzinfo)
    return result
