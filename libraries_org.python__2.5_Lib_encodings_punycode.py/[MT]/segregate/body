def segregate(str):
    '3.1 Basic code point segregation'
    base = []
    extended = {}
    for c in str:
        if (ord(c) < 128):
            base.append(c)
        else:
            extended[c] = 1
    extended = extended.keys()
    extended.sort()
    return (''.join(base).encode('ascii'), extended)
