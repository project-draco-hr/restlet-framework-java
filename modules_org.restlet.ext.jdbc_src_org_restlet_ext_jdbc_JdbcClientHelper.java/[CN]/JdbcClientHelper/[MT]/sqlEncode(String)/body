{
  StringBuilder result=new StringBuilder(query.length() + 10);
  char currentChar;
  for (int i=0; i < query.length(); i++) {
    currentChar=query.charAt(i);
    if (currentChar == '\'') {
      result.append("''");
    }
 else {
      result.append(currentChar);
    }
  }
  return result.toString();
}
