{
  StringBuilder builder=new StringBuilder();
  String[] tab=name.split("\\.");
  for (int i=0; i < tab.length; i++) {
    String string=tab[i];
    if (i > 0) {
      builder.append(".");
    }
    builder.append(string.substring(0,1).toLowerCase());
    builder.append(string.substring(1));
  }
  return builder.toString();
}
