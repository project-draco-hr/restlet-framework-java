def test_bases_raises_other_than_attribute_error(self):


    class E(object):

        def getbases(self):
            raise RuntimeError
        __bases__ = property(getbases)


    class I(object):

        def getclass(self):
            return E()
        __class__ = property(getclass)


    class C(object):

        def getbases(self):
            return ()
        __bases__ = property(getbases)
    self.assertRaises(RuntimeError, isinstance, I(), C())
