@bigmemtest(minsize=(_2G + 5), memuse=10)
def test_split_large(self, size):
    s = ((' a' * size) + ' ')
    l = s.split()
    self.assertEquals(len(l), size)
    self.assertEquals(set(l), set(['a']))
    del l
    l = s.split('a')
    self.assertEquals(len(l), (size + 1))
    self.assertEquals(set(l), set([' ']))
