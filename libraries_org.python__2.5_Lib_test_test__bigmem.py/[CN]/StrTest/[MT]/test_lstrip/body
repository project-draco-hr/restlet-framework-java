@bigmemtest(minsize=(_2G + 10), memuse=1)
def test_lstrip(self, size):
    SUBSTR = 'abc def ghi'
    s = SUBSTR.rjust(size)
    self.assertEquals(len(s), size)
    self.assertEquals(s.lstrip(), SUBSTR.lstrip())
    del s
    s = SUBSTR.ljust(size)
    self.assertEquals(len(s), size)
    stripped = s.lstrip()
    self.failUnless((stripped == s))
