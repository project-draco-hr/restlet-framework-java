{
  destination.append('"');
  char c;
  for (int i=0; i < source.length(); i++) {
    c=source.charAt(i);
    if (c == '"') {
      destination.append("\\\"");
    }
 else     if (c == '\\') {
      destination.append("\\\\");
    }
 else {
      destination.append(c);
    }
  }
  destination.append('"');
  return destination;
}
