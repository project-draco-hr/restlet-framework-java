def opengroup(self, name=None):
    gid = self.groups
    self.groups = (gid + 1)
    if (name is not None):
        ogid = self.groupdict.get(name, None)
        if (ogid is not None):
            raise error, ('redefinition of group name %s as group %d; was group %d' % (repr(name), gid, ogid))
        self.groupdict[name] = gid
    self.open.append(gid)
    return gid
