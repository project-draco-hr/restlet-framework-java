{
  String result=null;
  Reference requestRef=resourceRef.isAbsolute() ? resourceRef : resourceRef.getTargetRef();
  if (isProxied) {
    result=requestRef.getIdentifier();
  }
 else {
    if (requestRef.hasQuery()) {
      result=requestRef.getPath() + "?" + requestRef.getQuery();
    }
 else {
      result=requestRef.getPath();
    }
    if ((result == null) || (result.equals(""))) {
      result="/";
    }
  }
  return result;
}
