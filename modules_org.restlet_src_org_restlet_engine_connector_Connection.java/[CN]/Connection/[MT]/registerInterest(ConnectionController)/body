{
  if ((getState() != ConnectionState.CLOSING) && (getState() != ConnectionState.CLOSED)) {
    getInboundWay().registerInterest(controller);
    getOutboundWay().registerInterest(controller);
    int socketInterestOps=getSocketInterestOps();
    if (getSocketRegistration() == null) {
      try {
        setSocketRegistration(controller.register(getSocketChannel(),socketInterestOps,this));
        controller.wakeup();
      }
 catch (      IOException cce) {
        onError("Unable to register NIO interest operations for this connection",cce,Status.CONNECTOR_ERROR_COMMUNICATION);
      }
    }
 else {
      getSocketRegistration().setInterestOperations(socketInterestOps);
    }
  }
}
