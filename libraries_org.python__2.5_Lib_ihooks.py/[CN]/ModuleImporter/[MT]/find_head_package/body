def find_head_package(self, parent, name):
    if ('.' in name):
        i = name.find('.')
        head = name[:i]
        tail = name[(i + 1):]
    else:
        head = name
        tail = ''
    if parent:
        qname = ('%s.%s' % (parent.__name__, head))
    else:
        qname = head
    q = self.import_it(head, qname, parent)
    if q:
        return (q, tail)
    if parent:
        qname = head
        parent = None
        q = self.import_it(head, qname, parent)
        if q:
            return (q, tail)
    raise ImportError, ('No module named ' + qname)
