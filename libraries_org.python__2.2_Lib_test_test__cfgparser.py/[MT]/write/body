def write(src):
    print 'Testing writing of files...'
    cf = ConfigParser.ConfigParser()
    sio = StringIO.StringIO(src)
    cf.readfp(sio)
    output = StringIO.StringIO()
    cf.write(output)
    verify(output, '[DEFAULT]\nfoo = another very\n        long line\n\n[Long Line]\nfoo = this line is much, much longer than my editor\n        likes it.\n')
