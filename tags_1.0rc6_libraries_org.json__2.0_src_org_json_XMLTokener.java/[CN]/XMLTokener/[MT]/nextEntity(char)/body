{
  StringBuffer sb=new StringBuffer();
  for (; ; ) {
    char c=next();
    if (Character.isLetterOrDigit(c) || c == '#') {
      sb.append(Character.toLowerCase(c));
    }
 else     if (c == ';') {
      break;
    }
 else {
      throw syntaxError("Missing ';' in XML entity: &" + sb);
    }
  }
  String s=sb.toString();
  Object e=entity.get(s);
  return e != null ? e : a + s + ";";
}
