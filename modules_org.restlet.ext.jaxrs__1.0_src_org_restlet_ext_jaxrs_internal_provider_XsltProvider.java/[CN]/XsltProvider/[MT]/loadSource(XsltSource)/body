{
  String sourceName=xsltSource.value();
  try {
    URL url=new URL(sourceName);
    InputStream inputStream=url.openStream();
    return new StreamSource(inputStream);
  }
 catch (  MalformedURLException e) {
  }
catch (  IOException e) {
    logger.log(Level.WARNING,"The URL " + sourceName + " could not be read",e);
    return null;
  }
  try {
    File file=new File(sourceName);
    if (!file.exists()) {
      logger.warning("The file " + sourceName + " does not exist");
    }
 else     if (!file.canRead()) {
      logger.warning("The file " + sourceName + " is not readeable");
    }
 else {
      FileInputStream inputStream=new FileInputStream(file);
      return new StreamSource(inputStream);
    }
  }
 catch (  IOException e) {
    logger.log(Level.WARNING,"The file " + sourceName + " could not be read",e);
    return null;
  }
  String warning="The @XsltSource " + sourceName + " could not be read, because it is neither a file name nor an URL";
  logger.log(Level.WARNING,warning);
  return null;
}
