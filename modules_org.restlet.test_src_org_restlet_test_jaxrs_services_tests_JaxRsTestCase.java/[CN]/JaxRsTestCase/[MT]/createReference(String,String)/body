{
  Reference reference=createBaseRef();
  reference.setBaseRef(createBaseRef());
  if (!path.startsWith("/"))   path="/" + path;
  if (subPath != null) {
    if (subPath.startsWith(";"))     path+=subPath;
 else     if (subPath.length() > 0)     path+="/" + subPath;
  }
  reference.setPath(path);
  return reference;
}
