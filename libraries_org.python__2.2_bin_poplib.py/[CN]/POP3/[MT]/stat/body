def stat(self):
    'Get mailbox status.\n\n        Result is tuple of 2 ints (message count, mailbox size)\n        '
    retval = self._shortcmd('STAT')
    rets = retval.split()
    if self._debugging:
        print '*stat*', `rets`
    numMessages = int(rets[1])
    sizeMessages = int(rets[2])
    return (numMessages, sizeMessages)
