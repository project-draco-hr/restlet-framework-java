{
  ResourceInfo result=null;
  if (restlet instanceof Finder) {
    result=getResourceInfo(applicationInfo,(Finder)restlet,path,scheme);
  }
 else   if (restlet instanceof Router) {
    result=new ResourceInfo();
    result.setPath(path);
    result.setChildResources(getResourceInfos(applicationInfo,(Router)restlet,path,scheme));
  }
 else   if (restlet instanceof Filter) {
    result=getResourceInfo(applicationInfo,(Filter)restlet,path,scheme);
  }
  return result;
}
