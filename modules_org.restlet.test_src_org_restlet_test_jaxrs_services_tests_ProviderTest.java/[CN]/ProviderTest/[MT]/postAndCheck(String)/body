{
  Representation send=new DomRepresentation(new StringRepresentation("<person><firstname>Helmut</firstname><lastname>Kohl</lastname></person>\n"));
  Response response=post(subPath,send);
  assertEquals(Status.SUCCESS_OK,response.getStatus());
  Representation respEntity=response.getEntity();
  assertEquals("Helmut Kohl",respEntity.getText());
}
