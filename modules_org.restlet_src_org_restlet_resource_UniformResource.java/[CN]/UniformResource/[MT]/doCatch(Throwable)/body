{
  Level level=Level.INFO;
  if (throwable instanceof ResourceException) {
    ResourceException re=(ResourceException)throwable;
    if (re.getStatus().isServerError()) {
      level=Level.WARNING;
    }
 else     if (re.getStatus().isConnectorError()) {
      level=Level.INFO;
    }
 else     if (re.getStatus().isClientError()) {
      level=Level.FINE;
    }
    if (re.getCause() != null) {
      throwable=re.getCause();
    }
  }
  getLogger().log(level,"Exception or error caught in resource",throwable);
  if (getResponse() != null) {
    getResponse().setStatus(getStatusService().getStatus(throwable,this));
  }
}
