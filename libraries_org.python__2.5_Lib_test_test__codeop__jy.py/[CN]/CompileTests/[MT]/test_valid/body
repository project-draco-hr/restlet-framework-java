def test_valid(self):
    av = self.assertValid
    av('@a.b.c\ndef f():\n pass')
    av('\n\n')
    av('# a\n')
    av('\n\na = 1\n\n', values={'a': 1, })
    av('\n\nif 1: a=1\n\n', values={'a': 1, })
    av('def x():\n  pass\n ')
    av('def x():\n  pass\n  ')
    av('#a\n\n   \na=3\n', values={'a': 3, })
    av('def f():\n pass\n#foo')
