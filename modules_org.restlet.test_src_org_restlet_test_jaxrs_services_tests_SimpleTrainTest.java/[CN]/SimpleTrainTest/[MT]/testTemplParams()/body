{
  String deEncoded="decode";
  Response response=accessServer(Method.GET,SimpleTrain.class,deEncoded + "/66");
  assertEquals(Status.SUCCESS_OK,response.getStatus());
  Representation r=response.getEntity();
  assertEquals("66",r.getText());
  response=accessServer(Method.GET,SimpleTrain.class,deEncoded + "/a+bc");
  assertEquals(Status.SUCCESS_OK,response.getStatus());
  r=response.getEntity();
  assertEquals("a bc",r.getText());
  response=accessServer(Method.GET,SimpleTrain.class,deEncoded + "/a%20bc");
  assertEquals(Status.SUCCESS_OK,response.getStatus());
  r=response.getEntity();
  assertEquals("a bc",r.getText());
}
