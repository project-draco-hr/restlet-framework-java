{
  String deEncoded="decode";
  Response response=accessServer(SimpleTrain.class,deEncoded + "/66",Method.GET);
  assertEquals(Status.SUCCESS_OK,response.getStatus());
  Representation r=response.getEntity();
  assertEquals("66",r.getText());
  response=accessServer(SimpleTrain.class,deEncoded + "/a+bc",Method.GET);
  assertEquals(Status.SUCCESS_OK,response.getStatus());
  r=response.getEntity();
  assertEquals("a bc",r.getText());
  response=accessServer(SimpleTrain.class,deEncoded + "/a%20bc",Method.GET);
  assertEquals(Status.SUCCESS_OK,response.getStatus());
  r=response.getEntity();
  assertEquals("a bc",r.getText());
}
