def center(s, width):
    'center(s, width) -> string\n\n    Return a center version of s, in a field of the specified\n    width. padded with spaces as needed.  The string is never\n    truncated.\n\n    '
    n = (width - len(s))
    if (n <= 0):
        return s
    half = (n / 2)
    if ((n % 2) and (width % 2)):
        half = (half + 1)
    return (((' ' * half) + s) + (' ' * (n - half)))
