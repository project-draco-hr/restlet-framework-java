def zfill(x, width):
    'zfill(x, width) -> string\n\n    Pad a numeric string x with zeros on the left, to fill a field\n    of the specified width.  The string x is never truncated.\n\n    '
    if (type(x) == type('')):
        s = x
    else:
        s = `x`
    n = len(s)
    if (n >= width):
        return s
    sign = ''
    if (s[0] in ('-', '+')):
        (sign, s) = (s[0], s[1:])
    return ((sign + ('0' * (width - n))) + s)
