def query_errors():
    print 'Testing query interface...'
    cf = ConfigParser.ConfigParser()
    verify((cf.sections() == []), 'new ConfigParser should have no defined sections')
    verify((not cf.has_section('Foo')), 'new ConfigParser should have no acknowledged sections')
    try:
        cf.options('Foo')
    except ConfigParser.NoSectionError as e:
        pass
    else:
        raise TestFailed('Failed to catch expected NoSectionError from options()')
    try:
        cf.set('foo', 'bar', 'value')
    except ConfigParser.NoSectionError as e:
        pass
    else:
        raise TestFailed('Failed to catch expected NoSectionError from set()')
    expect_get_error(cf, ConfigParser.NoSectionError, 'foo', 'bar')
    cf.add_section('foo')
    expect_get_error(cf, ConfigParser.NoOptionError, 'foo', 'bar')
