def parse_errors():
    print 'Testing parse errors...'
    expect_parse_error(ConfigParser.ParsingError, '[Foo]\n  extra-spaces: splat\n')
    expect_parse_error(ConfigParser.ParsingError, '[Foo]\n  extra-spaces= splat\n')
    expect_parse_error(ConfigParser.ParsingError, '[Foo]\noption-without-value\n')
    expect_parse_error(ConfigParser.ParsingError, '[Foo]\n:value-without-option-name\n')
    expect_parse_error(ConfigParser.ParsingError, '[Foo]\n=value-without-option-name\n')
    expect_parse_error(ConfigParser.MissingSectionHeaderError, 'No Section!\n')
