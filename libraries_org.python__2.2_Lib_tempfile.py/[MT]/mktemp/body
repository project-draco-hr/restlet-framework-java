def mktemp(suffix=''):
    'User-callable function to return a unique temporary file name.'
    dir = gettempdir()
    pre = gettempprefix()
    while 1:
        i = _counter.get_next()
        file = os.path.join(dir, ((pre + str(i)) + suffix))
        if (not os.path.exists(file)):
            return file
