{
  if (this.writer == null) {
    ConcurrentMap<String,Object> attributes=getContext().getAttributes();
    this.writer=(Writer)attributes.get("org.restlet.ext.script.ScriptedResource.writer");
    if (this.writer == null) {
      this.writer=new OutputStreamWriter(System.out);
    }
  }
  return this.writer;
}
