def test_error_location():
    '\n    Source: selftest.py, ElementTree 1.3a3\n    Changes: removed dependencies in ElementTree, added one extra test\n\n    >>> def error(xml):\n    ...     p = expat.ParserCreate()\n    ...     try:\n    ...         p.Parse(xml, True)\n    ...     except expat.ExpatError, e:\n    ...         return e.lineno, e.offset\n\n    >>> error("foo")\n    (1, 0)\n    >>> error("<tag>&foo;</tag>")\n    (1, 5)\n    >>> error("foobar<")\n    (1, 6)\n    >>> error("<doc>text<doc")\n    (1, 9)\n    '
