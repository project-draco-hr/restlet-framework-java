def is_zipfile(filename):
    'Quickly see if file is a ZIP file by checking the magic number.\n\n    Will not accept a ZIP archive with an ending comment.\n    '
    try:
        fpin = open(filename, 'rb')
        fpin.seek((-22), 2)
        endrec = fpin.read()
        fpin.close()
        if ((endrec[0:4] == 'PK\x05\x06') and (endrec[(-2):] == '\x00\x00')):
            return 1
    except IOError:
        pass
