def splitdrive(path):
    'Split a pathname into drive and path specifiers. \n\n    Returns a 2-tuple "(drive,path)"; either part may be empty.\n    '
    if ((path[1:2] == ':') and (path[0].lower() in 'abcdefghijklmnopqrstuvwxyz') and ((path[2:] == '') or (path[2] in '/\\'))):
        return (path[:2], path[2:])
    return ('', path)
