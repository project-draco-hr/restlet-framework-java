def splitext(path):
    'Split the extension from a pathname.\n\n    Extension is everything from the last dot to the end.  Return\n    "(root, ext)", either part may be empty.\n\n    '
    i = 0
    n = (-1)
    for c in path:
        if (c == '.'):
            n = i
        i = (i + 1)
    if (n < 0):
        return (path, '')
    else:
        return (path[:n], path[n:])
