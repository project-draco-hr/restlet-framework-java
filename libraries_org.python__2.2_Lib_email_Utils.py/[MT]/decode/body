def decode(s):
    'Return a decoded string according to RFC 2047, as a unicode string.\n\n    NOTE: This function is deprecated.  Use Header.decode_header() instead.\n    '
    warnings.warn('Use Header.decode_header() instead.', DeprecationWarning, 2)
    from email.Header import decode_header
    L = decode_header(s)
    if (not isinstance(L, ListType)):
        return s
    rtn = []
    for (atom, charset) in L:
        if (charset is None):
            rtn.append(atom)
        else:
            rtn.append(unicode(atom, charset))
    return UEMPTYSTRING.join(rtn)
