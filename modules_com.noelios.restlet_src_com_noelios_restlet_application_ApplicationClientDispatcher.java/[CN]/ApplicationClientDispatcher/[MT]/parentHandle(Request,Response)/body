{
  if (getApplicationContext() != null) {
    if (getApplicationContext().getParentContext() != null) {
      getApplicationContext().getParentContext().getClientDispatcher().handle(request,response);
    }
 else {
      Logger.getLogger(ApplicationClientDispatcher.class.getCanonicalName()).warning("Your Application doesn't have a parent context available. Ensure that your parent Component has a context available.");
    }
  }
 else {
    Logger.getLogger(ApplicationClientDispatcher.class.getCanonicalName()).warning("Your Application doesn't have a context set. Ensure that you pass the parent Component's context to your Application constructor.");
  }
}
