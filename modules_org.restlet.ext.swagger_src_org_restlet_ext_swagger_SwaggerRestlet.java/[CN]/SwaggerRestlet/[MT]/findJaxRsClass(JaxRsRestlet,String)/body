{
  if (path != null) {
    Set<Class<?>> classes=rootRestlet.getRootResourceClasses();
    for (    Class<?> clazz : classes) {
      Api apiAnnotation=clazz.getAnnotation(Api.class);
      if (apiAnnotation != null && path.equals(apiAnnotation.value())) {
        return clazz;
      }
    }
  }
  return null;
}
