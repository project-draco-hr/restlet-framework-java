def getpwuid(uid):
    '\n    getpwuid(uid) -> (pw_name,pw_passwd,pw_uid,\n                      pw_gid,pw_gecos,pw_dir,pw_shell)\n    Return the password database entry for the given numeric user ID.\n    See pwd.__doc__ for more on password database entries.\n    '
    entry = _posix.getpwuid(uid)
    if (not entry):
        raise KeyError(uid)
    return struct_passwd(entry)
