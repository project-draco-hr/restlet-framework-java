def __str__(self):
    (mm, ss) = divmod(self.__seconds, 60)
    (hh, mm) = divmod(mm, 60)
    s = ('%d:%02d:%02d' % (hh, mm, ss))
    if self.__days:

        def plural(n):
            return (n, (((abs(n) != 1) and 's') or ''))
        s = (('%d day%s, ' % plural(self.__days)) + s)
    if self.__microseconds:
        s = (s + ('.%06d' % self.__microseconds))
    return s
