{
  Component component=new Component();
  component.getServers().add(Protocol.HTTP,8182);
  Application application=new Application(component){
    @Override public Restlet createRoot(){
      String target="http://www.google.com/search?q=site:mysite.org+${query('q')}";
      return new Redirector(getContext(),target,Redirector.MODE_CLIENT_TEMPORARY);
    }
  }
;
  component.getDefaultHost().attach("/search",application);
  component.start();
}
