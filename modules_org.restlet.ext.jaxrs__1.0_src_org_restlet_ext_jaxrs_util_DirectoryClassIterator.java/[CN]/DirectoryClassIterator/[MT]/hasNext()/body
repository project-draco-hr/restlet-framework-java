{
  if (this.next != null)   return true;
  if (dirStack.isEmpty())   return false;
  Iterator<File> iter=dirStack.peek();
  while (iter.hasNext()) {
    File entry=iter.next();
    if (entry.isDirectory()) {
      pushDir(entry);
      return this.hasNext();
    }
 else {
      this.next=loadClass(entry);
      if (this.next != null)       return true;
    }
  }
  dirStack.pop();
  return this.hasNext();
}
