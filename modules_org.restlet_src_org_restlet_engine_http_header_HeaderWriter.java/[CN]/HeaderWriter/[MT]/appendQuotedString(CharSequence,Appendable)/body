{
  if ((source != null) && (source.length() > 0)) {
    destination.append('"');
    char c;
    for (int i=0; i < source.length(); i++) {
      c=source.charAt(i);
      if (HeaderUtils.isQuotedText(c)) {
        destination.append(c);
      }
 else {
        destination.append('\\').append(c);
      }
    }
    destination.append('"');
  }
  return destination;
}
