def test_class(self):
    touch(os.path.join(self.subpkgname, (('bar' + os.extsep) + 'py')), 'class bar:\n    pass\n')
    from areallylongpackageandmodulenametotestreprtruncation.areallylongpackageandmodulenametotestreprtruncation import bar
    self.failUnless(repr(bar.bar).startswith('<class areallylongpackageandmodulenametotestreprtruncation.areallylongpackageandmodulenametotestreprtruncation.bar.bar'))
