def cleanup_test_droppings(testname, verbose):
    import shutil
    for name in (test_support.TESTFN, 'db_home'):
        if (not os.path.exists(name)):
            continue
        if os.path.isdir(name):
            (kind, nuker) = ('directory', shutil.rmtree)
        elif os.path.isfile(name):
            (kind, nuker) = ('file', os.unlink)
        else:
            raise SystemError(('os.path says %r exists but is neither directory nor file' % name))
        if verbose:
            print ('%r left behind %s %r' % (testname, kind, name))
        try:
            nuker(name)
        except Exception as msg:
            print  >> sys.stderr, ("%r left behind %s %r and it couldn't be removed: %s" % (testname, kind, name, msg))
