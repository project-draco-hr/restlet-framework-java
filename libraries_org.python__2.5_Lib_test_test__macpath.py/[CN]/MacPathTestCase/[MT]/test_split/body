def test_split(self):
    split = macpath.split
    self.assertEquals(split('foo:bar'), ('foo:', 'bar'))
    self.assertEquals(split('conky:mountpoint:foo:bar'), ('conky:mountpoint:foo', 'bar'))
    self.assertEquals(split(':'), ('', ''))
    self.assertEquals(split(':conky:mountpoint:'), (':conky:mountpoint', ''))
