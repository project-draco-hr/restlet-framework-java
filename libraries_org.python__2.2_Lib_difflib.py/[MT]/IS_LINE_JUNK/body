def IS_LINE_JUNK(line, pat=re.compile('\\s*#?\\s*$').match):
    "\n    Return 1 for ignorable line: iff `line` is blank or contains a single '#'.\n\n    Examples:\n\n    >>> IS_LINE_JUNK('\\n')\n    1\n    >>> IS_LINE_JUNK('  #   \\n')\n    1\n    >>> IS_LINE_JUNK('hello\\n')\n    0\n    "
    return (pat(line) is not None)
