def IS_CHARACTER_JUNK(ch, ws=' \t'):
    "\n    Return 1 for ignorable character: iff `ch` is a space or tab.\n\n    Examples:\n\n    >>> IS_CHARACTER_JUNK(' ')\n    1\n    >>> IS_CHARACTER_JUNK('\\t')\n    1\n    >>> IS_CHARACTER_JUNK('\\n')\n    0\n    >>> IS_CHARACTER_JUNK('x')\n    0\n    "
    return (ch in ws)
