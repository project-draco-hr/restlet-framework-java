def nobody_uid():
    "Internal routine to get nobody's uid"
    global nobody
    if nobody:
        return nobody
    try:
        import pwd
    except ImportError:
        return (-1)
    try:
        nobody = pwd.getpwnam('nobody')[2]
    except KeyError:
        nobody = (1 + max(map((lambda x: x[2]), pwd.getpwall())))
    return nobody
