def test_break_continue_loop(extra_burning_oil=1, count=0):
    big_hippo = 2
    while big_hippo:
        count += 1
        try:
            if (extra_burning_oil and (big_hippo == 1)):
                extra_burning_oil -= 1
                break
            big_hippo -= 1
            continue
        except:
            raise
    if ((count > 2) or (big_hippo != 1)):
        print 'continue then break in try/except in loop broken!'
