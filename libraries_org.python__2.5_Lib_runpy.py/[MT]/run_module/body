def run_module(mod_name, init_globals=None, run_name=None, alter_sys=False):
    "Execute a module's code without importing it\n\n       Returns the resulting top level namespace dictionary\n    "
    loader = get_loader(mod_name)
    if (loader is None):
        raise ImportError(('No module named ' + mod_name))
    code = loader.get_code(mod_name)
    if (code is None):
        raise ImportError(('No code object available for ' + mod_name))
    filename = _get_filename(loader, mod_name)
    if (run_name is None):
        run_name = mod_name
    return _run_module_code(code, init_globals, run_name, filename, loader, alter_sys)
