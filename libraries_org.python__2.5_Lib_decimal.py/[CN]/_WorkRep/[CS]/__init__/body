def __init__(self, value=None):
    if (value is None):
        self.sign = None
        self.int = 0
        self.exp = None
    elif isinstance(value, Decimal):
        self.sign = value._sign
        self.int = int(value._int)
        self.exp = value._exp
    else:
        self.sign = value[0]
        self.int = value[1]
        self.exp = value[2]
