{
  String loggerName=null;
  if (clazz != null) {
    if (Edition.CURRENT == Edition.GWT) {
      loggerName=clazz.getName();
    }
 else {
      loggerName=clazz.getCanonicalName();
    }
  }
  if (loggerName == null) {
    loggerName=defaultLoggerName;
  }
  if (loggerName != null) {
    return getLogger(loggerName);
  }
 else {
    return getAnonymousLogger();
  }
}
