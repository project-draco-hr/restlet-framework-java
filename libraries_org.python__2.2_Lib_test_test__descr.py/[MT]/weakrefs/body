def weakrefs():
    if verbose:
        print 'Testing weak references...'
    import weakref


    class C(object):
        pass
    c = C()
    r = weakref.ref(c)
    verify((r() is c))
    del c
    verify((r() is None))
    del r


    class NoWeak(object):
        __slots__ = ['foo']
    no = NoWeak()
    try:
        weakref.ref(no)
    except TypeError as msg:
        verify((str(msg).find('weak reference') >= 0))
    else:
        verify(0, 'weakref.ref(no) should be illegal')


    class Weak(object):
        __slots__ = ['foo', '__weakref__']
    yes = Weak()
    r = weakref.ref(yes)
    verify((r() is yes))
    del yes
    verify((r() is None))
    del r
