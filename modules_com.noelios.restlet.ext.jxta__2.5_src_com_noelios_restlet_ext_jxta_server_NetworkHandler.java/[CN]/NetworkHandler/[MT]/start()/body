{
  if (network == null) {
    try {
      network=new Network(new AbstractConfigurator(new URI(HOME),Profile.get(getClass().getResource(PROFILE_RESOURCE).toURI())){
        public PlatformConfig createPlatformConfig(        Configurator c) throws ConfiguratorException {
          c.setName(CONFIG_NAME);
          c.setSecurity(CONFIG_USER,CONFIG_PASSWORD);
          return c.getPlatformConfig();
        }
      }
,getNetworkListener());
      network.start();
    }
 catch (    URISyntaxException use) {
      use.printStackTrace();
    }
catch (    NetworkException ne) {
      ne.printStackTrace();
    }
  }
}
