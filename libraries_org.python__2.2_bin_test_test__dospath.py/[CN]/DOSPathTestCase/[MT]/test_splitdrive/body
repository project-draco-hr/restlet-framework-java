def test_splitdrive(self):
    splitdrive = dospath.splitdrive
    self.assertEquals(splitdrive('c:\\foo\\bar'), ('c:', '\\foo\\bar'))
    self.assertEquals(splitdrive('c:/foo/bar'), ('c:', '/foo/bar'))
    self.assertEquals(splitdrive('foo\\bar'), ('', 'foo\\bar'))
    self.assertEquals(splitdrive('c:'), ('c:', ''))
