{
  if (clazz == null)   throw new IllegalArgumentException("The class must not be null");
  if (methodName == null)   throw new IllegalArgumentException("The method name must not be null");
  Collection<Method> methods=new ArrayList<Method>(2);
  for (  Method method : clazz.getMethods()) {
    if (method.getName().equals(methodName))     methods.add(method);
  }
  return methods;
}
