{
  if (uri == null)   throw new IllegalArgumentException("The URI must not be null");
  if (uri.getAuthority() != null)   reference.setAuthority(uri.getAuthority());
  if (uri.getFragment() != null)   reference.setFragment(uri.getFragment());
  if (uri.getHost() != null)   reference.setHostDomain(uri.getHost());
  if (uri.getPort() >= 0)   reference.setHostPort(uri.getPort());
  if (uri.getPath() != null)   reference.setPath(uri.getPath());
  if (uri.getQuery() != null)   reference.setQuery(uri.getQuery());
  if (uri.getScheme() != null)   reference.setScheme(uri.getScheme());
  if (uri.getUserInfo() != null)   reference.setUserInfo(uri.getUserInfo());
}
