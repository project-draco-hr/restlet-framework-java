def test_read_link(self):
    link = ('1-LONGLINK-' * 10)[:101]
    name = ('0-LONGNAME-' * 10)[:101]
    try:
        tarinfo = self.tar.getmember(link)
    except KeyError:
        tarinfo = None
    self.assert_((tarinfo is not None), 'longlink not found')
    self.assert_((tarinfo.linkname == name), 'linkname wrong')
