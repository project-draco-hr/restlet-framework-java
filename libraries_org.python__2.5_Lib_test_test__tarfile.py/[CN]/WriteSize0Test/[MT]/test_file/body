def test_file(self):
    path = os.path.join(self.tmpdir, 'file')
    f = open(path, 'w')
    f.close()
    tarinfo = self.dst.gettarinfo(path)
    self.assertEqual(tarinfo.size, 0)
    f = open(path, 'w')
    f.write('aaa')
    f.close()
    tarinfo = self.dst.gettarinfo(path)
    self.assertEqual(tarinfo.size, 3)
