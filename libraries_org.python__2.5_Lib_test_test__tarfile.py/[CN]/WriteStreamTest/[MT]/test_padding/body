def test_padding(self):
    self.dst.close()
    if (self.comp == 'gz'):
        f = gzip.GzipFile(self.dstname)
        s = f.read()
        f.close()
    elif (self.comp == 'bz2'):
        b = bz2.BZ2Decompressor()
        f = file(self.dstname)
        s = f.read()
        f.close()
        s = b.decompress(s)
        self.assertEqual(len(f.unused_data), 0, 'trailing data')
    else:
        f = file(self.dstname)
        s = f.read()
        f.close()
    self.assertEqual(s.count('\x00'), tarfile.RECORDSIZE, 'incorrect zero padding')
