def setUp(self):
    self.tar = tarfile.open(tmpname(), 'w')
    self.foo = os.path.join(dirname(), 'foo')
    self.bar = os.path.join(dirname(), 'bar')
    if os.path.exists(self.foo):
        os.remove(self.foo)
    if os.path.exists(self.bar):
        os.remove(self.bar)
    f = open(self.foo, 'w')
    f.write('foo')
    f.close()
    self.tar.add(self.foo)
