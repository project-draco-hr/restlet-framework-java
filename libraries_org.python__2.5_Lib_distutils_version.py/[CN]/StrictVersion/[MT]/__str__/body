def __str__(self):
    if (self.version[2] == 0):
        vstring = string.join(map(str, self.version[0:2]), '.')
    else:
        vstring = string.join(map(str, self.version), '.')
    if self.prerelease:
        vstring = ((vstring + self.prerelease[0]) + str(self.prerelease[1]))
    return vstring
