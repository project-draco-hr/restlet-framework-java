def addpackage(sitedir, name):
    fullname = os.path.join(sitedir, name)
    try:
        f = open(fullname)
    except IOError:
        return
    while 1:
        dir = f.readline()
        if (not dir):
            break
        if (dir[0] == '#'):
            continue
        if (dir[(-1)] == '\n'):
            dir = dir[:(-1)]
        dir = makepath(sitedir, dir)
        if ((dir not in sys.path) and os.path.exists(dir)):
            sys.path.append(dir)
