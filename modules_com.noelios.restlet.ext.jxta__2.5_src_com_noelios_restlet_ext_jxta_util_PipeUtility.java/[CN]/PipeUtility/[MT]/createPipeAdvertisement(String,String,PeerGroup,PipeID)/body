{
  if (logger.isLoggable(Level.FINE)) {
    logger.log(Level.FINE,"advertisement[name][type][group][pipe]: [" + name + "]["+ type+ "]["+ group+ "]["+ pipeId+ "]");
  }
  PipeAdvertisement pa=(PipeAdvertisement)AdvertisementFactory.newAdvertisement(PipeAdvertisement.getAdvertisementType());
  pa.setPipeID(createPipeID(group,pipeId));
  pa.setName(PIPES.get(type) + "/" + name);
  pa.setType(type);
  if (logger.isLoggable(Level.FINE)) {
    logger.log(Level.FINE,"pipe[pipe]: [" + pa + "]");
  }
  return pa;
}
