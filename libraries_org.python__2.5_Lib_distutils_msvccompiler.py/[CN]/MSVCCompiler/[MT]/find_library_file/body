def find_library_file(self, dirs, lib, debug=0):
    if debug:
        try_names = [(lib + '_d'), lib]
    else:
        try_names = [lib]
    for dir in dirs:
        for name in try_names:
            libfile = os.path.join(dir, self.library_filename(name))
            if os.path.exists(libfile):
                return libfile
    else:
        return None
