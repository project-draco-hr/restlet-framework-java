def getran(ndigits):
    verify((ndigits > 0))
    nbits_hi = (ndigits * SHIFT)
    nbits_lo = ((nbits_hi - SHIFT) + 1)
    answer = 0L
    nbits = 0
    r = (int((random() * (SHIFT * 2))) | 1)
    while (nbits < nbits_lo):
        bits = ((r >> 1) + 1)
        bits = min(bits, (nbits_hi - nbits))
        verify((1 <= bits <= SHIFT))
        nbits = (nbits + bits)
        answer = (answer << bits)
        if (r & 1):
            answer = (answer | ((1 << bits) - 1))
        r = int((random() * (SHIFT * 2)))
    verify((nbits_lo <= nbits <= nbits_hi))
    if (random() < 0.5):
        answer = (- answer)
    return answer
