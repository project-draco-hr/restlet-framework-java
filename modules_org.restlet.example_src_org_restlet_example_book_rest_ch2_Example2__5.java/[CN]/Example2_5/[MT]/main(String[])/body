{
  if (args.length != 2) {
    System.err.println("You need to pass your del.icio.us user name and password");
  }
 else {
    ClientResource resource=new ClientResource("https://api.del.icio.us/v1/posts/recent");
    resource.setChallengeResponse(new ChallengeResponse(ChallengeScheme.HTTP_BASIC,args[0],args[1]));
    Representation entity=resource.get();
    DomRepresentation document=new DomRepresentation(entity);
    for (    Node node : document.getNodes("/posts/post")) {
      NamedNodeMap attrs=node.getAttributes();
      String desc=attrs.getNamedItem("description").getNodeValue();
      String href=attrs.getNamedItem("href").getNodeValue();
      System.out.println(desc + ": " + href);
    }
  }
}
