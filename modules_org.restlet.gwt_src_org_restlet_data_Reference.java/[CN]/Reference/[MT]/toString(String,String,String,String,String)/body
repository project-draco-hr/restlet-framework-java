{
  StringBuilder sb=new StringBuilder();
  if (scheme != null) {
    sb.append(scheme.toLowerCase()).append("://").append(host);
  }
  if (path != null) {
    sb.append(path);
  }
  if (query != null) {
    sb.append('?').append(query);
  }
  if (fragment != null) {
    sb.append('#').append(fragment);
  }
  return sb.toString();
}
