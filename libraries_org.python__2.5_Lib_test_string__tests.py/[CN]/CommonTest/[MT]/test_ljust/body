def test_ljust(self):
    self.checkequal('abc       ', 'abc', 'ljust', 10)
    self.checkequal('abc   ', 'abc', 'ljust', 6)
    self.checkequal('abc', 'abc', 'ljust', 3)
    self.checkequal('abc', 'abc', 'ljust', 2)
    self.checkequal('abc*******', 'abc', 'ljust', 10, '*')
    self.checkraises(TypeError, 'abc', 'ljust')
