def ismount(path):
    'Test whether a path is a mount point'
    try:
        s1 = os.stat(path)
        s2 = os.stat(join(path, '..'))
    except os.error:
        return 0
    dev1 = s1[stat.ST_DEV]
    dev2 = s2[stat.ST_DEV]
    if (dev1 != dev2):
        return 1
    ino1 = s1[stat.ST_INO]
    ino2 = s2[stat.ST_INO]
    if (ino1 == ino2):
        return 1
    return 0
