{
  writer.write("<tr>");
  writer.write("<td>");
  writer.write(name);
  writer.write("</td>\n");
  writer.write("<td>");
  if (hyperlink) {
    writer.write("<a href=\"" + value + "\">");
  }
  writer.write(value);
  if (hyperlink) {
    writer.write("</a>");
  }
  writer.write("</td>\n");
  writer.write("</tr>\n");
}
