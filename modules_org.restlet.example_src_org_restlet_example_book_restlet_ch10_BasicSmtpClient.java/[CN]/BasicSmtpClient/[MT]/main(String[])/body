{
  final Representation mail=new StringRepresentation(MAIL,MediaType.TEXT_XML);
  final Request request=new Request(new Method("POST"),"smtp://smtp.mail.yahoo.com",mail);
  final ChallengeResponse challengeResponse=new ChallengeResponse(ChallengeScheme.SMTP_PLAIN,"restlet.testfr","saya08");
  request.setChallengeResponse(challengeResponse);
  final Client client=new Client(Protocol.SMTP);
  final Response response=client.handle(request);
  System.out.println(response.getStatus());
}
