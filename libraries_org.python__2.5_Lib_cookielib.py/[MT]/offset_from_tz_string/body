def offset_from_tz_string(tz):
    offset = None
    if (tz in UTC_ZONES):
        offset = 0
    else:
        m = TIMEZONE_RE.search(tz)
        if m:
            offset = (3600 * int(m.group(2)))
            if m.group(3):
                offset = (offset + (60 * int(m.group(3))))
            if (m.group(1) == '-'):
                offset = (- offset)
    return offset
