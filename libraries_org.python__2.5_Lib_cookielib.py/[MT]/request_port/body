def request_port(request):
    host = request.get_host()
    i = host.find(':')
    if (i >= 0):
        port = host[(i + 1):]
        try:
            int(port)
        except ValueError:
            _debug("nonnumeric port: '%s'", port)
            return None
    else:
        port = DEFAULT_HTTP_PORT
    return port
