{
  if (server == null) {
    throw new IllegalStateException("server not started");
  }
  if (logger.isLoggable(Level.FINE)) {
    logger.log(Level.FINE,"server stopping");
  }
  listener.interrupt();
  server.close();
  server=null;
  if (logger.isLoggable(Level.FINE)) {
    logger.log(Level.FINE,"server stoppped");
  }
}
