{
  StreamSource sourceDocument=new StreamSource(getSourceRepresentation().getStream());
  StreamSource transformSheet=new StreamSource(getTransformSheet().getStream());
  StreamResult resultDocument=new StreamResult(outputStream);
  try {
    javax.xml.transform.Transformer transformer=TransformerFactory.newInstance().newTransformer(transformSheet);
    transformer.setURIResolver(getURIResolver());
    transformer.transform(sourceDocument,resultDocument);
  }
 catch (  TransformerConfigurationException tce) {
    throw new IOException("Transformer configuration exception. " + tce.getMessage());
  }
catch (  TransformerFactoryConfigurationError tfce) {
    throw new IOException("Transformer factory configuration exception. " + tfce.getMessage());
  }
catch (  TransformerException te) {
    throw new IOException("Transformer exception. " + te.getMessage());
  }
}
