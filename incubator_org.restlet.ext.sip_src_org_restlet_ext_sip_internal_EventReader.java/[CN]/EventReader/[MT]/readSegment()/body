{
  StringBuilder sb=null;
  skipSpaces();
  int next=read();
  while (next != -1) {
    if (isSpace(next) || isComma(next)) {
      unread();
      next=-1;
    }
 else     if ((next == '.')) {
      next=-1;
    }
 else {
      if (sb == null) {
        sb=new StringBuilder();
      }
      sb.append((char)next);
      next=read();
    }
  }
  return (sb == null) ? null : sb.toString();
}
