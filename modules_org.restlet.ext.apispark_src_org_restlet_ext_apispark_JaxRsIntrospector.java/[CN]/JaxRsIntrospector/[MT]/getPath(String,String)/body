{
  String result=null;
  if (rootPath == null) {
    rootPath="/";
  }
 else   if (!rootPath.startsWith("/")) {
    rootPath="/" + rootPath;
  }
  if (relativePath == null) {
    result=rootPath;
  }
 else   if (rootPath.endsWith("/")) {
    if (relativePath.startsWith("/")) {
      result=rootPath + relativePath.substring(1);
    }
 else {
      result=rootPath + relativePath;
    }
  }
 else {
    if (relativePath.startsWith("/")) {
      result=rootPath + relativePath;
    }
 else {
      result=rootPath + "/" + relativePath;
    }
  }
  return result;
}
