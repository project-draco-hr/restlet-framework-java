def _gen_temp_sourcefile(self, body, headers, lang):
    filename = ('_configtest' + LANG_EXT[lang])
    file = open(filename, 'w')
    if headers:
        for header in headers:
            file.write(('#include <%s>\n' % header))
        file.write('\n')
    file.write(body)
    if (body[(-1)] != '\n'):
        file.write('\n')
    file.close()
    return filename
