def test_replace(self):
    replace = strop.replace
    self.assert_((replace('one!two!three!', '!', '@', 1) == 'one@two!three!'))
    self.assert_((replace('one!two!three!', '!', '@', 2) == 'one@two@three!'))
    self.assert_((replace('one!two!three!', '!', '@', 3) == 'one@two@three@'))
    self.assert_((replace('one!two!three!', '!', '@', 4) == 'one@two@three@'))
    self.assert_((replace('one!two!three!', '!', '@', 0) == 'one@two@three@'))
    self.assert_((replace('one!two!three!', '!', '@') == 'one@two@three@'))
    self.assert_((replace('one!two!three!', 'x', '@') == 'one!two!three!'))
    self.assert_((replace('one!two!three!', 'x', '@', 2) == 'one!two!three!'))
