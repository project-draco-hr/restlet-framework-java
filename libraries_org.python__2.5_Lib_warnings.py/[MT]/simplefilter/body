def simplefilter(action, category=Warning, lineno=0, append=0):
    'Insert a simple entry into the list of warnings filters (at the front).\n\n    A simple filter matches all modules and messages.\n    '
    assert (action in ('error', 'ignore', 'always', 'default', 'module', 'once')), ('invalid action: %r' % (action,))
    assert (isinstance(lineno, int) and (lineno >= 0)), 'lineno must be an int >= 0'
    item = (action, None, category, None, lineno)
    if append:
        filters.append(item)
    else:
        filters.insert(0, item)
