{
  try {
    final IBindingFactory jibxBFact=JibxRepresentation.getBindingFactory(this.bindingName,this.bindingClass);
    final IMarshallingContext mctx=jibxBFact.createMarshallingContext();
    mctx.marshalDocument(getObject(),getCharacterSet().getName(),null,writer);
  }
 catch (  JiBXException e) {
    throw new IOException(e.getMessage());
  }
}
