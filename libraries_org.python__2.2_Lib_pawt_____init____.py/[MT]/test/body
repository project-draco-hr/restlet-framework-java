def test(panel, size=None, name='AWT Tester'):
    f = awt.Frame(name, windowClosing=(lambda event: sys.exit(0)))
    if hasattr(panel, 'init'):
        panel.init()
    f.add('Center', panel)
    f.pack()
    if (size is not None):
        f.setSize(apply(awt.Dimension, size))
    f.setVisible(1)
    return f
