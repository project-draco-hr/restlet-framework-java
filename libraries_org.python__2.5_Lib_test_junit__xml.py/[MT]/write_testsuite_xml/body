def write_testsuite_xml(stream, tests, errors, failures, skipped, name, took):
    'Write the XML header (<testsuite/>)'
    stream.write('<?xml version="1.0" encoding="utf-8"?>\n')
    stream.write(('<testsuite tests="%d" errors="%d" failures="%d" ' % (tests, errors, failures)))
    stream.write(('skipped="%d" name="%s" time="%.3f">\n' % (skipped, name, took)))
