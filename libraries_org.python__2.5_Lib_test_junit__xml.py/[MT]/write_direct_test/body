def write_direct_test(junit_xml_dir, name, took, type=None, exc_info=None, stdout=None, stderr=None):
    "Write XML for a regrtest 'direct' test; a test which was ran on\n    import (which we label as __main__.__import__)\n    "
    return write_manual_test(junit_xml_dir, ('%s.__main__' % name), '__import__', took, type, exc_info, stdout, stderr)
