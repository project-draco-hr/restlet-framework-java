def write_stdouterr_xml(stream, stdout, stderr):
    'Write the stdout/err tags'
    if stdout:
        stream.write(('  <system-out><![CDATA[%s]]></system-out>\n' % escape_cdata(safe_str(stdout))))
    if stderr:
        stream.write(('  <system-err><![CDATA[%s]]></system-err>\n' % escape_cdata(safe_str(stderr))))
