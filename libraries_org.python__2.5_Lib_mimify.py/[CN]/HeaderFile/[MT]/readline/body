def readline(self):
    if (self.peek is not None):
        line = self.peek
        self.peek = None
    else:
        line = self.file.readline()
    if (not line):
        return line
    if he.match(line):
        return line
    while 1:
        self.peek = self.file.readline()
        if ((len(self.peek) == 0) or ((self.peek[0] != ' ') and (self.peek[0] != '\t'))):
            return line
        line = (line + self.peek)
        self.peek = None
