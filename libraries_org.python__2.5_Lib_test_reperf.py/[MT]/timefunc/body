def timefunc(n, func, *args, **kw):
    t0 = time.clock()
    try:
        for i in range(n):
            result = func(*args, **kw)
        return result
    finally:
        t1 = time.clock()
        if (n > 1):
            print n, 'times',
        print func.__name__, ('%.3f' % (t1 - t0)), 'CPU seconds'
