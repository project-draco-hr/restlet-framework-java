def __init__(self, path=None, debug=0, excludes=[], replace_paths=[]):
    if (path is None):
        path = sys.path
    self.path = path
    self.modules = {}
    self.badmodules = {}
    self.debug = debug
    self.indent = 0
    self.excludes = excludes
    self.replace_paths = replace_paths
    self.processed_paths = []
