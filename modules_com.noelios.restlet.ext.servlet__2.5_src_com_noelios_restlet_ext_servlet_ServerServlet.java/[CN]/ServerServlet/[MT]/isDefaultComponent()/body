{
  ServletWarClient client=new ServletWarClient(new Context(),getServletContext());
  Response response=client.get("war:///WEB-INF/restlet.xml");
  if (response.getStatus().isSuccess() && response.isEntityAvailable()) {
    return false;
  }
  final String componentAttributeName=getInitParameter(COMPONENT_KEY,null);
  if (componentAttributeName != null) {
    return false;
  }
  return true;
}
