{
  super(context);
  this.extensionBackwardMapping=new ExtensionBackwardMapping(metadataService);
  this.excHandler=new ExceptionHandler(getLogger());
  this.wrapperFactory=new WrapperFactory(tlContext,this.providers,extensionBackwardMapping);
  this.loadDefaultProviders();
  if (roleChecker != null)   this.setRoleChecker(roleChecker);
 else   this.setRoleChecker(RoleChecker.REJECT_WITH_ERROR);
}
