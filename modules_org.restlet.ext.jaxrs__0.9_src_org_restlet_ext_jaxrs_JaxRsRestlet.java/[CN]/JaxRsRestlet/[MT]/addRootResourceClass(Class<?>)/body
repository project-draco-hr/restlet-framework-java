{
  if (rootResourceClass == null) {
    throw new IllegalArgumentException("The root resource class must not be null");
  }
  RootResourceClass newRrc;
  try {
    newRrc=this.wrapperFactory.getRootResourceClass(rootResourceClass);
  }
 catch (  final IllegalPathOnClassException e) {
    getLogger().warning("The root resource class " + rootResourceClass.getName() + " is annotated with an illegal path: "+ e.getPath()+ ". ("+ e.getMessage()+ ")");
    return false;
  }
catch (  final IllegalArgumentException e) {
    getLogger().log(Level.WARNING,"The root resource class " + rootResourceClass.getName() + " is not a valud root resource class: "+ e.getMessage(),e);
    return false;
  }
catch (  final MissingAnnotationException e) {
    getLogger().log(Level.WARNING,"The root resource class " + rootResourceClass.getName() + " is not a valud root resource class: "+ e.getMessage(),e);
    return false;
  }
catch (  final MissingConstructorException e) {
    getLogger().warning("The root resource class " + rootResourceClass.getName() + " has no valid constructor");
    return false;
  }
catch (  final IllegalConstrParamTypeException e) {
    getLogger().warning("The root resource class " + rootResourceClass.getName() + " has no valid constructor: "+ e.getMessage());
    return false;
  }
catch (  final IllegalBeanSetterTypeException e) {
    getLogger().warning("The root resource class " + rootResourceClass.getName() + " has no valid constructor: "+ e.getMessage());
    return false;
  }
catch (  final IllegalFieldTypeException e) {
    getLogger().warning("The root resource class " + rootResourceClass.getName() + " has no valid constructor: "+ e.getMessage());
    return false;
  }
  final PathRegExp uriTempl=newRrc.getPathRegExp();
  for (  final RootResourceClass rrc : this.rootResourceClasses) {
    if (rrc.getJaxRsClass().equals(rootResourceClass)) {
      return true;
    }
    if (rrc.getPathRegExp().equals(uriTempl)) {
      getLogger().warning("There is already a root resource class with path " + uriTempl.getPathPattern());
      return false;
    }
  }
  this.rootResourceClasses.add(newRrc);
  return true;
}
