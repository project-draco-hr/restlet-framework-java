def visitAugSlice(self, node, mode):
    if (mode == 'load'):
        self.visitSlice(node, 1)
    elif (mode == 'store'):
        slice = 0
        if node.lower:
            slice = (slice | 1)
        if node.upper:
            slice = (slice | 2)
        if (slice == 0):
            self.emit('ROT_TWO')
        elif (slice == 3):
            self.emit('ROT_FOUR')
        else:
            self.emit('ROT_THREE')
        self.emit(('STORE_SLICE+%d' % slice))
