{
  final OAuthMessage requestMessage=OAuthHelper.getMessage(request);
  final OAuthAccessor accessor=this.provider.getAccessor(requestMessage);
  if (accessor == null) {
    return Guard.AUTHENTICATION_MISSING;
  }
  try {
    requestMessage.validateMessage(accessor,new SimpleOAuthValidator());
  }
 catch (  Exception e1) {
    return Guard.AUTHENTICATION_INVALID;
  }
  return Boolean.TRUE.equals(accessor.getProperty("authorized")) ? Guard.AUTHENTICATION_VALID : Guard.AUTHENTICATION_INVALID;
}
