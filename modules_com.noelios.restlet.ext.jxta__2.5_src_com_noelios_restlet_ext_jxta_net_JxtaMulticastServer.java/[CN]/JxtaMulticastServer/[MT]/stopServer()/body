{
  if (server == null) {
    throw new IllegalStateException("server not started");
  }
  if (logger.isLoggable(Level.FINE)) {
    logger.log(Level.FINE,"jxta multicast server stopping");
  }
  server.close();
  server=null;
  if (logger.isLoggable(Level.FINE)) {
    logger.log(Level.FINE,"jxta multicast server stoppped");
  }
}
