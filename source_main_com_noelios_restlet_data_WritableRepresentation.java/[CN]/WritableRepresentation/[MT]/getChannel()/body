{
  final Pipe pipe=Pipe.open();
  Thread writer=new Thread(){
    public void run(){
      try {
        WritableByteChannel wbc=pipe.sink();
        write(wbc);
        wbc.close();
      }
 catch (      IOException ioe) {
        ioe.printStackTrace();
      }
    }
  }
;
  writer.start();
  return pipe.source();
}
