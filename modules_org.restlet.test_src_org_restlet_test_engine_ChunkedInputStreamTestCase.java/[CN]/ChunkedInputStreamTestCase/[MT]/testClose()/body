{
  final String data="test data";
  InputStream input=write(data);
  InputStream chunked=new ChunkedInputStream(input);
  assertEquals('t',chunked.read());
  chunked.close();
  assertEquals(-1,chunked.read());
  input=write(data);
  chunked=new ChunkedInputStream(input);
  chunked.close();
  assertEquals(-1,chunked.read());
}
