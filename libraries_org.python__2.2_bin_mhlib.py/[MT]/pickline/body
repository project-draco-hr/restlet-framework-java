def pickline(file, key, casefold=1):
    try:
        f = open(file, 'r')
    except IOError:
        return None
    pat = (re.escape(key) + ':')
    prog = re.compile(pat, (casefold and re.IGNORECASE))
    while 1:
        line = f.readline()
        if (not line):
            break
        if prog.match(line):
            text = line[(len(key) + 1):]
            while 1:
                line = f.readline()
                if ((not line) or (not line[0].isspace())):
                    break
                text = (text + line)
            return text.strip()
    return None
