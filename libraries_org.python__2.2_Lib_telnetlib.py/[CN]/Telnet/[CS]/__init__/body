def __init__(self, host=None, port=0):
    'Constructor.\n\n        When called without arguments, create an unconnected instance.\n        With a hostname argument, it connects the instance; a port\n        number is optional.\n\n        '
    self.debuglevel = DEBUGLEVEL
    self.host = host
    self.port = port
    self.sock = None
    self.rawq = ''
    self.irawq = 0
    self.cookedq = ''
    self.eof = 0
    self.iacseq = ''
    self.sb = 0
    self.sbdataq = ''
    self.option_callback = None
    if (host is not None):
        self.open(host, port)
