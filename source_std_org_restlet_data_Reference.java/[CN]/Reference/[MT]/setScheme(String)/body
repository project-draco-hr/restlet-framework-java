{
  if (schemeIndex != -1) {
    if (scheme != null) {
      this.uri=scheme.toLowerCase() + this.uri.substring(schemeIndex);
    }
 else {
      this.uri=this.uri.substring(schemeIndex + 1);
    }
  }
 else {
    if (scheme != null) {
      scheme=scheme.toLowerCase();
      if (this.uri == null) {
        this.uri=scheme + ':';
      }
 else {
        this.uri=scheme + ':' + this.uri;
      }
    }
  }
  updateIndexes();
}
