{
  if (relativePart == null)   relativePart="";
  if (schemeIndex == -1) {
    if (queryIndex != -1) {
      this.uri=relativePart + this.uri.substring(queryIndex);
    }
 else     if (fragmentIndex != -1) {
      this.uri=relativePart + this.uri.substring(fragmentIndex);
    }
 else {
      this.uri=relativePart;
    }
  }
  updateIndexes();
}
