def _build_localename(localetuple):
    ' Builds a locale code from the given tuple (language code,\n        encoding).\n\n        No aliasing or normalizing takes place.\n\n    '
    (language, encoding) = localetuple
    if (language is None):
        language = 'C'
    if (encoding is None):
        return language
    else:
        return ((language + '.') + encoding)
