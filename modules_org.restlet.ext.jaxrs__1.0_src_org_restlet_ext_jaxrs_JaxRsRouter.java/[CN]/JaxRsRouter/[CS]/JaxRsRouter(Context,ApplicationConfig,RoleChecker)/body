{
  super(context);
  this.excHandler=new ExceptionHandler(this);
  this.wrapperFactory=new WrapperFactory(getLogger());
  this.loadDefaultProviders();
  if (appConfig != null)   this.attach(appConfig);
  if (roleChecker != null)   this.setRoleChecker(roleChecker);
 else   this.setRoleChecker(RoleChecker.REJECT_WITH_ERROR);
}
