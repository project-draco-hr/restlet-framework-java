{
  Constructor<?> constructor=RootResourceClass.findJaxRsConstructor(messageBodyReaderClass);
  Object provider;
  try {
    provider=RootResourceClass.createInstance(constructor,null,null,null,authenticator);
  }
 catch (  Exception e) {
    String message="MessageBodyReader could not be instantiated";
    if (e.getMessage() != null)     message+=": " + e.getMessage();
    throw new IllegalArgumentException(message,e);
  }
  this.messageBodyReaders.add(new MessageBodyReader((javax.ws.rs.ext.MessageBodyReader<?>)provider));
}
