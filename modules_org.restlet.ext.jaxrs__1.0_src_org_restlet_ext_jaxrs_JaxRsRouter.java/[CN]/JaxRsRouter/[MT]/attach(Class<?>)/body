{
  RootResourceClass newRrc=new RootResourceClass(rootResourceClass);
  PathRegExp uriTempl=newRrc.getPathRegExp();
  for (  RootResourceClass rrc : this.rootResourceClasses) {
    if (rrc.getJaxRsClass().equals(rootResourceClass))     return;
    if (rrc.getPathRegExp().equals(uriTempl))     throw new IllegalArgumentException("There is already a root resource class with path " + uriTempl.getPathPattern());
  }
  rootResourceClasses.add(newRrc);
}
