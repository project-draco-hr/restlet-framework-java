{
  RootResourceClass newRrc=new RootResourceClass(jaxRsClass);
  PathRegExp uriTempl=newRrc.getPathRegExp();
  for (  RootResourceClass rootResourceClass : this.rootResourceClasses) {
    if (rootResourceClass.getJaxRsClass().equals(jaxRsClass))     return;
    if (rootResourceClass.getPathRegExp().equals(uriTempl))     throw new IllegalArgumentException("There is already a root resource class with path " + uriTempl.getPathPattern());
  }
  rootResourceClasses.add(newRrc);
}
