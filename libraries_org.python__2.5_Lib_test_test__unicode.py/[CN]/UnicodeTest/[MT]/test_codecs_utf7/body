def test_codecs_utf7(self):
    utfTests = [(u'A\u2262\u0391.', 'A+ImIDkQ.'), (u'Hi Mom -\u263a-!', 'Hi Mom -+Jjo--!'), (u'\u65e5\u672c\u8a9e', '+ZeVnLIqe-'), (u'Item 3 is \xa31.', 'Item 3 is +AKM-1.'), (u'+', '+-'), (u'+-', '+--'), (u'+?', '+-?'), (u'\\?', '+AFw?'), (u'+?', '+-?'), (u'\\\\?', '+AFwAXA?'), (u'\\\\\\?', '+AFwAXABc?'), (u'++--', '+-+---')]
    for (x, y) in utfTests:
        self.assertEqual(x.encode('utf-7'), y)
    self.assertRaises(UnicodeError, unicode, '+3ADYAA-', 'utf-7')
    self.assertEqual(unicode('+3ADYAA-', 'utf-7', 'replace'), u'\ufffd')
