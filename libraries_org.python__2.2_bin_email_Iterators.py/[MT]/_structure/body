def _structure(msg, fp=None, level=0):
    'A handy debugging aid'
    if (fp is None):
        fp = sys.stdout
    tab = (' ' * (level * 4))
    print  >> fp, (tab + msg.get_content_type())
    if msg.is_multipart():
        for subpart in msg.get_payload():
            _structure(subpart, fp, (level + 1))
