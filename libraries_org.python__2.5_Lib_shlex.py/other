'A lexical analyzer class for simple shell-like syntaxes.'
import os.path
import sys
from collections import deque
try:
    from cStringIO import StringIO
except ImportError:
    from StringIO import StringIO
__all__ = ['shlex', 'split']
if (__name__ == '__main__'):
    if (len(sys.argv) == 1):
        lexer = shlex()
    else:
        file = sys.argv[1]
        lexer = shlex(open(file), file)
    while 1:
        tt = lexer.get_token()
        if tt:
            print ('Token: ' + repr(tt))
        else:
            break
