{
  request.setBaseRef(new Reference(request.getProtocol().getSchemeName(),response.getServerInfo().getDomain(),response.getServerInfo().getPort(),null,null,null));
  if (getLogger().isLoggable(Level.FINE)) {
    getLogger().fine("New base URI: " + request.getBaseRef());
    getLogger().fine("New relative part: " + request.getRelativePart());
  }
}
