def _ensure_stringlike(self, option, what, default=None):
    val = getattr(self, option)
    if (val is None):
        setattr(self, option, default)
        return default
    elif (type(val) is not StringType):
        raise DistutilsOptionError, ("'%s' must be a %s (got `%s`)" % (option, what, val))
    return val
