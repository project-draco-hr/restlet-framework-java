{
  final ClassLoader classLoader=org.restlet.engine.Engine.getClassLoader();
  Enumeration<URL> configUrls=classLoader.getResources(descriptorPath);
  if (configUrls != null) {
    for (final Enumeration<URL> configEnum=configUrls; configEnum.hasMoreElements(); ) {
      registerHelpers(classLoader,configEnum.nextElement(),helpers,constructorClass);
    }
  }
}
