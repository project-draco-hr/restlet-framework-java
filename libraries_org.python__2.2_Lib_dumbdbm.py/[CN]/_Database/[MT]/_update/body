def _update(self):
    self._index = {}
    try:
        f = _open(self._dirfile)
    except IOError:
        pass
    else:
        while 1:
            line = f.readline().rstrip()
            if (not line):
                break
            (key, (pos, siz)) = eval(line)
            self._index[key] = (pos, siz)
        f.close()
