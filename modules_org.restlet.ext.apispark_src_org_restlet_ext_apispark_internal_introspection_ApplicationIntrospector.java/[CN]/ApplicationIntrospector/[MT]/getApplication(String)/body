{
  if (className == null) {
    return null;
  }
  try {
    Class<?> clazz=Class.forName(className);
    if (Application.class.isAssignableFrom(clazz)) {
      return (Application)clazz.getConstructor().newInstance();
    }
 else {
      throw new RuntimeException(className + " does not seem to be a valid subclass of " + Application.class.getName()+ " class.");
    }
  }
 catch (  ClassNotFoundException e) {
    throw new RuntimeException("Cannot locate the definition source.",e);
  }
catch (  Exception e) {
    throw new RuntimeException("Cannot instantiate the application class. " + "Check that the application class has an empty constructor.",e);
  }
}
