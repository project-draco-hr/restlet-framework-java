def __init__(self, txt):
    self.args = []
    for s in txt.split('\n'):
        self.pos = 0
        self.chunk = 0
        self.s = s
        self.state = self.space
        for ch in s:
            self.state(ch)
            self.pos += 1
        if (self.state == self.quoted):
            raise Exception, 'Expected closing quote for arg'
        self.state('"')
