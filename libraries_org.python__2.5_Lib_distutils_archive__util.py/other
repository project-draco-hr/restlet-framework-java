ARCHIVE_FORMATS = {'gztar': (make_tarball, [('compress', 'gzip')], "gzip'ed tar-file"), 'bztar': (make_tarball, [('compress', 'bzip2')], "bzip2'ed tar-file"), 'ztar': (make_tarball, [('compress', 'compress')], 'compressed tar file'), 'tar': (make_tarball, [('compress', None)], 'uncompressed tar file'), 'zip': (make_zipfile, [], 'ZIP file'), }
