{
  super(context);
  this.logService=logService;
  if (logService != null) {
    this.logTemplate=(logService.getLogFormat() == null) ? null : new Template(logService.getLogFormat());
    if (logService.getLoggerName() != null) {
      this.logLogger=Engine.getLogger(logService.getLoggerName());
    }
 else     if ((context != null) && (context.getLogger().getParent() != null)) {
      this.logLogger=Engine.getLogger(context.getLogger().getParent().getName() + "." + ChildContext.getBestClassName(logService.getClass()));
    }
 else {
      this.logLogger=Engine.getLogger(ChildContext.getBestClassName(logService.getClass()));
    }
  }
}
