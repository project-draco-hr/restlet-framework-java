{
  String pathTemplate=path.value();
  if (pathTemplate.contains(";"))   throw new IllegalPathException(path,"A path must not contain a semicolon");
  if (path.encode()) {
    pathTemplate=EncodeOrCheck.encodeNotBraces(pathTemplate,false).toString();
  }
 else {
    try {
      EncodeOrCheck.checkForInvalidUriChars(pathTemplate,-1,"path template");
    }
 catch (    IllegalArgumentException iae) {
      throw new IllegalPathException(path,iae);
    }
  }
  return pathTemplate;
}
