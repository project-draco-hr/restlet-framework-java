def print_topics(self, header, cmds, cmdlen, maxcol):
    if cmds:
        print header
        if self.ruler:
            print (self.ruler * len(header))
        (cmds_per_line, junk) = divmod(maxcol, cmdlen)
        col = cmds_per_line
        for cmd in cmds:
            if (col == 0):
                print 
            print ((('%-' + `cmdlen`) + 's') % cmd),
            col = ((col + 1) % cmds_per_line)
        print '\n'
