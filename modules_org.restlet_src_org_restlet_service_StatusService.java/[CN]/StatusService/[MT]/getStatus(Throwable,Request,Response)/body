{
  Status result;
  Status defaultStatus=Status.SERVER_ERROR_INTERNAL;
  Throwable t=throwable;
  if (throwable instanceof ResourceException) {
    defaultStatus=((ResourceException)throwable).getStatus();
    if (throwable.getCause() != null && throwable.getCause() != throwable) {
      t=throwable.getCause();
    }
  }
  org.restlet.engine.resource.ThrowableAnnotationInfo sai=org.restlet.engine.resource.AnnotationUtils.getInstance().getThrowableAnnotationInfo(t.getClass());
  if (sai != null) {
    result=new Status(sai.getStatus(),t);
  }
 else {
    result=new Status(defaultStatus,t);
  }
  return result;
}
