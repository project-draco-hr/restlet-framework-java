def _test():
    args = sys.argv[1:]
    decompress = (args and (args[0] == '-d'))
    if decompress:
        args = args[1:]
    if (not args):
        args = ['-']
    for arg in args:
        if decompress:
            if (arg == '-'):
                f = GzipFile(filename='', mode='rb', fileobj=sys.stdin)
                g = sys.stdout
            else:
                if (arg[(-3):] != '.gz'):
                    print "filename doesn't end in .gz:", `arg`
                    continue
                f = open(arg, 'rb')
                g = __builtin__.open(arg[:(-3)], 'wb')
        elif (arg == '-'):
            f = sys.stdin
            g = GzipFile(filename='', mode='wb', fileobj=sys.stdout)
        else:
            f = __builtin__.open(arg, 'rb')
            g = open((arg + '.gz'), 'wb')
        while 1:
            chunk = f.read(1024)
            if (not chunk):
                break
            g.write(chunk)
        if (g is not sys.stdout):
            g.close()
        if (f is not sys.stdin):
            f.close()
