{
  String ssp=getSchemeSpecificPart();
  if (ssp.startsWith("//")) {
    int index1=ssp.indexOf('/',2);
    if (index1 != -1) {
      int index2=ssp.indexOf('?');
      if (index2 != -1) {
        return ssp.substring(index1,index2);
      }
 else {
        return ssp.substring(index1);
      }
    }
 else {
      return null;
    }
  }
 else {
    int index=ssp.indexOf('?');
    if (index != -1) {
      return ssp.substring(0,index);
    }
 else {
      return ssp;
    }
  }
}
