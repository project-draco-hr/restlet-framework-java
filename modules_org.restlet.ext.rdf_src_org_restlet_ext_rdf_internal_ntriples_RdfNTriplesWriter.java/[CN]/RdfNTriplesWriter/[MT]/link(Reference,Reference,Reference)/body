{
  try {
    write(source);
    this.bw.write(" ");
    write(typeRef);
    this.bw.write(" ");
    write(target);
    this.bw.write(".\n");
  }
 catch (  IOException e) {
    org.restlet.Context.getCurrentLogger().warning("Cannot write the representation of a statement due to: " + e.getMessage());
  }
}
