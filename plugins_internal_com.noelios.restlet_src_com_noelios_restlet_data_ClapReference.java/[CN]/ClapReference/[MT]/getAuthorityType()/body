{
  int result=0;
  String authority=getAuthority();
  if (authority != null) {
    if (authority.equalsIgnoreCase(getAuthorityName(CLASS))) {
      result=CLASS;
    }
 else     if (authority.equalsIgnoreCase(getAuthorityName(SYSTEM))) {
      result=SYSTEM;
    }
 else     if (authority.equalsIgnoreCase(getAuthorityName(THREAD))) {
      result=THREAD;
    }
  }
  return result;
}
