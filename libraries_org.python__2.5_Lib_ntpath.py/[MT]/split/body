def split(p):
    'Split a pathname.\n\n    Return tuple (head, tail) where tail is everything after the final slash.\n    Either part may be empty.'
    (d, p) = splitdrive(p)
    i = len(p)
    while (i and (p[(i - 1)] not in '/\\')):
        i = (i - 1)
    (head, tail) = (p[:i], p[i:])
    head2 = head
    while (head2 and (head2[(-1)] in '/\\')):
        head2 = head2[:(-1)]
    head = (head2 or head)
    return ((d + head), tail)
