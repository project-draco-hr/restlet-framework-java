{
  int result=-1;
  if (canRead()) {
    result=this.source.read(b,off,Math.min(len,(int)(this.chunkSize - this.position)));
    this.position+=result;
    if (len - result > 0) {
      int nextResult=read(b,off + result,len - result);
      if (nextResult > 0) {
        result+=nextResult;
      }
    }
  }
  return result;
}
