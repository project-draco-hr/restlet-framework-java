def recvfrom(self, num_bytes, flags=None):
    '\n        There is some disagreement as to what the behaviour should be if\n        a recvfrom operation is requested on an unbound socket.\n        See the following links for more information\n        http://bugs.jython.org/issue1005\n        http://bugs.sun.com/view_bug.do?bug_id=6621689\n        '
    try:
        if (not self.sock_impl):
            self.sock_impl = _datagram_socket_impl()
            self._config()
        return self.sock_impl.recvfrom(num_bytes, flags)
    except java.lang.Exception as jlx:
        raise _map_exception(jlx)
