def read(self, n=4096):
    try:
        data = jarray.zeros(n, 'b')
        m = self._in_buf.read(data, 0, n)
        if (m <= 0):
            return ''
        if (m < n):
            data = data[:m]
        return data.tostring()
    except java.lang.Exception as jlx:
        raise _map_exception(jlx)
