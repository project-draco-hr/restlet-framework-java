def _calctimeoutvalue(value):
    if (value is None):
        return None
    try:
        floatvalue = float(value)
    except:
        raise TypeError('Socket timeout value must be a number or None')
    if (floatvalue < 0.0):
        raise ValueError('Socket timeout value cannot be negative')
    if (floatvalue < 1e-06):
        return 0.0
    return floatvalue
