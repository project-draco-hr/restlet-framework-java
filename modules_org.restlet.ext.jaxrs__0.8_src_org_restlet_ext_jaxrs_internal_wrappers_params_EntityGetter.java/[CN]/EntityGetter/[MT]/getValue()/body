{
  Request request=this.tlContext.get().getRequest();
  Representation entity=request.getEntity();
  if (entity == null)   return null;
  MediaType mediaType=entity.getMediaType();
  MessageBodyReader<?> mbr=mbrs.getBestReader(this.convToCl,this.convToGen,annotations,mediaType);
  if (mbr == null)   throw new NoMessageBodyReaderException(mediaType,this.convToCl);
  MultivaluedMap<String,String> httpHeaders=Util.getJaxRsHttpHeaders(request);
  try {
    javax.ws.rs.core.MediaType jaxRsMediaType=Converter.toJaxRsMediaType(mediaType,entity.getCharacterSet());
    return mbr.readFrom((Class)this.convToCl,this.convToGen,annotations,jaxRsMediaType,httpHeaders,entity.getStream());
  }
 catch (  WebApplicationException wae) {
    throw wae;
  }
catch (  IOException e) {
    throw ConvertRepresentationException.object(this.convToCl,"the message body",e);
  }
 finally {
    entity.release();
  }
}
