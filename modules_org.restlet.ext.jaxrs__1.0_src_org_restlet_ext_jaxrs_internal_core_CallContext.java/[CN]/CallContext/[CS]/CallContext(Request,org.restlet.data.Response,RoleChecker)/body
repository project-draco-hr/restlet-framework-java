{
  super(Util.getReferenceOriginal(request),Util.getReferenceCut(request),Util.getCutExtensions(request),false);
  if (response == null)   throw new IllegalArgumentException("The Restlet Response must not be null");
  if (request == null)   throw new IllegalArgumentException("The Restlet Request must not be null");
  if (roleChecker == null)   throw new IllegalArgumentException("The RoleChecker must not be null.");
  this.request=request;
  this.response=response;
  this.roleChecker=roleChecker;
  this.accMediaTypes=new SortedMetadata<org.restlet.data.MediaType>(request.getClientInfo().getAcceptedMediaTypes());
}
