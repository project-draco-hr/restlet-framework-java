{
  final StringBuilder result=new StringBuilder();
  char nextChar;
  for (int i=0; i < path.length(); i++) {
    nextChar=path.charAt(i);
    if ((nextChar == '/') || (nextChar == '\\')) {
      result.append(File.separatorChar);
    }
 else {
      result.append(nextChar);
    }
  }
  return result.toString();
}
