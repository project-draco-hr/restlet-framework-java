{
  int index;
  String mainType;
  String subType;
  if (name == null)   return null;
  if ((index=name.indexOf('/')) == -1) {
    mainType=normalizeToken(name);
    subType="*";
  }
 else {
    mainType=normalizeToken(name.substring(0,index));
    subType=normalizeToken(name.substring(index + 1));
  }
  return mainType + '/' + subType;
}
