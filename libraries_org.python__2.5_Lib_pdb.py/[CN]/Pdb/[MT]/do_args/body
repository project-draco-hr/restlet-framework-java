def do_args(self, arg):
    f = self.curframe
    co = f.f_code
    dict = f.f_locals
    n = co.co_argcount
    if (co.co_flags & 4):
        n = (n + 1)
    if (co.co_flags & 8):
        n = (n + 1)
    for i in range(n):
        name = co.co_varnames[i]
        print  >> self.stdout, name, '=',
        if (name in dict):
            print  >> self.stdout, dict[name]
        else:
            print  >> self.stdout, '*** undefined ***'
