def do_disable(self, arg):
    args = arg.split()
    for i in args:
        try:
            i = int(i)
        except ValueError:
            print  >> self.stdout, ('Breakpoint index %r is not a number' % i)
            continue
        if (not (0 <= i < len(bdb.Breakpoint.bpbynumber))):
            print  >> self.stdout, 'No breakpoint numbered', i
            continue
        bp = bdb.Breakpoint.bpbynumber[i]
        if bp:
            bp.disable()
