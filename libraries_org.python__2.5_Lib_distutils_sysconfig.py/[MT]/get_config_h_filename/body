def get_config_h_filename():
    'Return full pathname of installed pyconfig.h file.'
    if python_build:
        inc_dir = argv0_path
    else:
        inc_dir = get_python_inc(plat_specific=1)
    if (get_python_version() < '2.2'):
        config_h = 'config.h'
    else:
        config_h = 'pyconfig.h'
    return os.path.join(inc_dir, config_h)
