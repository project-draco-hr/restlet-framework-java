{
  if (this.converter == null) {
    try {
      String converterClass=getParameters().getFirstValue("converter","com.noelios.restlet.impl.http.HttpClientConverter");
      this.converter=(HttpClientConverter)Class.forName(converterClass).getConstructor(Context.class).newInstance(getContext());
    }
 catch (    Exception e) {
      getLogger().log(Level.SEVERE,"Unable to create the HTTP server converter");
    }
  }
  return this.converter;
}
